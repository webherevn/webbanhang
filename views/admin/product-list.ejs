<%- include('partials/head.ejs') %>
</head>
<body>
    <div class="admin-wrapper">
        <%- include('partials/sidebar.ejs') %>

        <div class="admin-content">
            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fw-bold">Bài viết</h2>
                    <a href="/admin/add-post" class="btn btn-primary">Viết bài mới</a>
                </div>

                <div class="card shadow-sm p-3">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Tiêu đề</th>
                                <th>Tác giả</th>
                                <th>Chuyên mục</th>
                                <th>Ngày</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% posts.forEach(p => { %>
                                <tr>
                                    <td class="fw-bold text-primary"><%= p.title %></td>
                                    <td>Admin</td>
                                    <td><%= p.category ? p.category.name : '---' %></td>
                                    <td><%= p.createdAt.toLocaleDateString('vi-VN') %></td>
                                    <td>
                                        <a href="/admin/edit-post/<%= p._id %>" class="btn btn-sm btn-outline-secondary">Sửa</a>
                                        <button class="btn btn-sm btn-outline-danger">Xóa</button>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>