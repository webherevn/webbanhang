<%- include('../partials/head.ejs') %>
<style>
    body { margin: 0; background-color: #f0f2f5; }
    .admin-wrapper { display: flex; min-height: 100vh; }
    .admin-sidebar-container { width: 200px; position: fixed; top: 0; left: 0; bottom: 0; background-color: #23282d; z-index: 1000; }
    .admin-content { flex: 1; margin-left: 200px; padding: 30px; }
</style>
</head>
<body>
    <div class="admin-wrapper">
        <div class="admin-sidebar-container">
            <%- include('./partials/sidebar.ejs') %>
        </div>

        <div class="admin-content">
            <h2 class="fw-bold h4 mb-4 border-bottom pb-3">Chuyên mục Blog</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h6 class="fw-bold mb-3">Thêm chuyên mục</h6>
                            <form action="/admin/add-blog-category" method="POST">
                                <input type="text" name="name" class="form-control mb-3" placeholder="Tên chuyên mục" required>
                                <button class="btn btn-primary btn-sm w-100">Lưu chuyên mục</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card shadow-sm p-3">
                        <table class="table table-hover">
                            <thead><tr><th>Tên</th><th>Slug</th></tr></thead>
                            <tbody>
                                <% categories.forEach(cat => { %>
                                    <tr>
                                        <td class="ps-3 fw-bold text-primary">
                                            <a href="/admin/edit-blog-category/<%= cat._id %>" class="text-decoration-none"><%= cat.name %></a>
                                            <div class="row-actions mt-1 small" style="visibility: hidden;">
                                                <a href="/admin/edit-blog-category/<%= cat._id %>" class="text-primary">Sửa</a> | 
                                                <form action="/admin/delete-blog-category" method="POST" class="d-inline" onsubmit="return confirm('Xóa chuyên mục này?')">
                                                    <input type="hidden" name="categoryId" value="<%= cat._id %>">
                                                    <button class="btn btn-link p-0 text-danger border-0 bg-transparent small" style="font-size: 13px;">Xóa</button>
                                                </form> | 
                                                <a href="/blog/category/<%= cat.slug %>" target="_blank" class="text-success">Xem</a>
                                            </div>
                                        </td>
                                        <td class="text-muted small"><%= cat.slug %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>