<section class="py-5 bg-white">
    <div class="container">
        <div class="row g-4 justify-content-center">
            <% (data.items || []).forEach(item => { %>
                <div class="col-md-4 col-lg-3">
                    <div class="p-4 text-center ani-up h-100 border-0 shadow-sm bg-light">
                        <div class="icon-box mb-3 text-primary">
                            <i class="bi <%= item.icon %> fs-1"></i>
                        </div>
                        <h6 class="fw-bold text-uppercase" style="font-size: 14px;"><%= item.title %></h6>
                        <p class="text-muted small mb-0"><%= item.desc %></p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>