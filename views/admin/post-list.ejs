<%- include('../partials/head.ejs') %>
</head>
<body>
    <%- include('../partials/navigation.ejs') %>
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Quản lý Bài viết</h2>
            <a href="/admin/add-post" class="btn btn-success">Viết bài mới</a>
        </div>
        <table class="table table-bordered align-middle">
            <thead class="table-dark">
                <tr><th>Ảnh</th><th>Tiêu đề</th><th>Chuyên mục</th><th>Hành động</th></tr>
            </thead>
            <tbody>
                <% if(posts.length > 0) { %>
                    <% posts.forEach(p => { %>
                        <tr>
                            <td><img src="<%= p.thumbnail %>" style="width: 50px;"></td>
                            <td><%= p.title %></td>
                            <td><%= p.category ? p.category.name : '---' %></td>
                            <td>
                                <form action="/admin/delete-post" method="POST" onsubmit="return confirm('Xóa bài này?');">
                                    <input type="hidden" name="postId" value="<%= p._id %>">
                                    <button class="btn btn-danger btn-sm">Xóa</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr><td colspan="4">Chưa có bài viết nào.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>