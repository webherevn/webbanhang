<header class="hero-section d-flex align-items-center text-center text-white" 
        style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= data.bgImage %>'); 
        background-size: cover; background-position: center; height: 80vh;">
    <div class="container">
        <h5 class="text-uppercase letter-spacing-2 mb-3"><%= data.subtitle %></h5>
        <h1 class="display-3 fw-bold mb-4"><%= data.title %></h1>
        <a href="<%= data.buttonLink %>" class="btn btn-light btn-lg rounded-0 px-5 py-3 fw-bold"><%= data.buttonText %></a>
    </div>
</header>