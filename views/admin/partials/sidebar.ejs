<div class="w-100 text-white">
    <div class="p-3 border-bottom border-secondary" style="background-color: #1d2327;">
        <a href="/" class="text-white text-decoration-none small fw-bold">
            <i class="fas fa-home me-2"></i>Xem Website
        </a>
    </div>

    <ul class="nav flex-column mt-2">
        <li class="nav-item">
            <a class="nav-link text-white py-2 px-3 <%= path === '/admin' ? 'active-wp' : '' %>" href="/admin">
                <i class="fas fa-tachometer-alt me-2"></i>Bảng tin
            </a>
        </li>

        <li class="nav-item mt-2">
            <a class="nav-link text-white py-2 px-3 <%= path.includes('post') ? 'active-wp' : '' %>" href="/admin/posts">
                <i class="fas fa-thumbtack me-2"></i>Bài viết
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-white py-2 px-3 <%= path === '/admin/blog-categories' ? 'active-wp' : '' %>" href="/admin/blog-categories" style="font-size: 1rem; opacity: 1;">
                <i class="fas fa-folder me-2"></i>Chuyên mục
            </a>
        </li>

        <hr class="border-secondary mx-3 my-2">

        <li class="nav-item">
            <a class="nav-link text-white py-2 px-3 <%= path.includes('product') ? 'active-wp' : '' %>" href="/admin/products">
                <i class="fas fa-box me-2"></i>Sản phẩm
            </a>
        </li>
        
        <li class="nav-item">
            <a class="nav-link text-white py-2 px-3 <%= path === '/admin/categories' ? 'active-wp' : '' %>" href="/admin/categories" style="font-size: 1rem; opacity: 1;">
                <i class="fas fa-tags me-2"></i>Danh mục Sản Phẩm
            </a>
        </li>

        <li class="nav-item">
            <a href="/admin/settings" class="nav-link text-white <%= path === '/admin/settings' ? 'active-wp bg-primary' : '' %> py-2 px-3">
                <i class="fas fa-code me-2"></i>
                <span>Cấu hình Script</span>
            </a>
        </li>

        <li class="nav-item">
            <a href="/admin/pages" class="nav-link text-white <%= path === '/admin/pages' ? 'active-wp bg-primary' : '' %> py-2 px-3">
                <i class="fas fa-file-alt me-2"></i>
                <span>Trang</span>
            </a>
        </li>

        <li class="nav-item">
            <a href="/admin/customize" class="nav-link <%= path === '/admin/customize' ? 'active-wp' : '' %> text-white py-2 px-3 d-flex align-items-center mb-1">
                <div class="sidebar-icon-wrapper me-2 text-center" style="width: 20px;">
                    <i class="fas fa-paint-brush"></i>
                </div>
                <span>Giao diện</span>
            </a>
        </li>

        <% if (path === '/admin/customize') { %>
            <ul class="nav flex-column ms-4 small mb-2">
                <li class="nav-item">
                    <a href="/admin/customize#logo-section" class="nav-link text-white-50 py-1">Logo & Header</a>
                </li>
                <li class="nav-item">
                    <a href="/admin/customize#footer-section" class="nav-link text-white-50 py-1">Chân trang</a>
                </li>
            </ul>
        <% } %>
    </ul>
</div>

<style>
    .active-wp { background-color: #2271b1 !important; border-left: 4px solid #72aee6; }
    .nav-link:hover { background-color: #32373c; color: #72aee6 !important; }
    .nav-link { 
        transition: 0.2s; 
        border-left: 4px solid transparent; 
        display: flex; 
        align-items: center;
    }
    .nav-link i { width: 20px; text-align: center; } /* Giúp các icon có độ rộng bằng nhau để chữ thẳng hàng */
</style>