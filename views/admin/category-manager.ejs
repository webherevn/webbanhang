<%- include('../partials/head.ejs') %>
    <script src="https://cdn.ckeditor.com/4.25.0-lts/standard/ckeditor.js"></script>

    <style>
        /* CSS FIX LỖI TRÀN SIDEBAR & LAYOUT WORDPRESS */
        body { background-color: #f0f0f1; margin: 0; padding: 0; }
        
        .admin-wrapper { display: flex; min-height: 100vh; }
        
        /* Sidebar cố định */
        .admin-sidebar-container {
            width: 240px; /* Khớp với độ rộng sidebar bạn đã đặt */
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            background-color: #23282d;
            z-index: 1000;
        }

        /* Content đẩy sang phải để không bị Sidebar đè lên */
        .admin-content {
            flex: 1;
            margin-left: 240px; 
            padding: 20px;
        }

        .wp-card { background: #fff; border: 1px solid #c3c4c7; box-shadow: 0 1px 1px rgba(0,0,0,.04); padding: 20px; }
        .table-head-wp { background-color: #f0f0f1; border-bottom: 2px solid #c3c4c7; font-size: 14px; font-weight: 600; color: #1d2327; }
        .category-name { font-weight: 600; color: #2271b1; text-decoration: none; }
        .row-actions { visibility: hidden; font-size: 13px; }
        tr:hover .row-actions { visibility: visible; }
        
        .img-preview-box {
            width: 100%; height: 150px; background: #f0f0f1; border: 1px dashed #c3c4c7;
            display: flex; align-items: center; justify-content: center;
            margin-bottom: 10px; overflow: hidden; border-radius: 4px;
        }
        .img-preview-box img { width: 100%; height: 100%; object-fit: cover; display: none; }
    </style>
</head>
<body>

    <div class="admin-wrapper">
        <div class="admin-sidebar-container">
            <%- include('./partials/sidebar.ejs') %>
        </div>

        <div class="admin-content">
            <div class="container-fluid">
                <h2 class="mb-4 fw-bold text-dark">Danh mục sản phẩm</h2>

                <div class="row">
                    <div class="col-md-4">
                        <div class="wp-card mb-3">
                            <h5 class="fw-bold mb-3 small text-uppercase">Thêm danh mục mới</h5>
                            
                            <form action="/admin/categories" method="POST" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label class="form-label fw-bold small">Tên danh mục</label>
                                    <input type="text" name="name" class="form-control form-control-sm" placeholder="Ví dụ: Thời trang Nam" required>
                                    <div class="form-text small opacity-75">Tên riêng sẽ hiện trên trang web của bạn.</div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold small">Mô tả</label>
                                    <textarea name="description" id="catDesc"></textarea>
                                    <script>
                                        CKEDITOR.replace('catDesc', { 
                                            height: 120,
                                            toolbar: [ ['Bold', 'Italic', 'Underline', '-', 'NumberedList', 'BulletedList', '-', 'Link'] ]
                                        });
                                    </script>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label fw-bold small">Ảnh đại diện</label>
                                    <div class="img-preview-box" onclick="document.getElementById('catImage').click()" style="cursor: pointer;">
                                        <span class="placeholder-text text-center small text-muted">
                                            <i class="fas fa-upload d-block mb-1"></i> Bấm để tải ảnh
                                        </span>
                                        <img id="previewImg" src="">
                                    </div>
                                    <input type="file" name="image" id="catImage" class="form-control form-control-sm d-none" accept="image/*" onchange="previewFile()">
                                </div>

                                <button type="submit" class="btn btn-primary btn-sm px-3 fw-bold w-100">Thêm danh mục mới</button>
                            </form>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="wp-card p-0 overflow-hidden">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-head-wp">
                                    <tr>
                                        <th scope="col" class="ps-3" width="40"><input type="checkbox" class="form-check-input"></th>
                                        <th scope="col" width="70">Ảnh</th>
                                        <th scope="col">Tên</th>
                                        <th scope="col">Mô tả</th>
                                        <th scope="col">Slug</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (categories.length > 0) { %>
                                        <% categories.forEach(cat => { %>
                                            <tr>
                                                <td class="ps-3"><input type="checkbox" class="form-check-input"></td>
                                                <td>
                                                    <% if (cat.image) { %>
                                                        <img src="<%= cat.image %>" style="width: 45px; height: 45px; object-fit: cover; border-radius: 2px; border: 1px solid #ccd0d4;">
                                                    <% } else { %>
                                                        <div class="bg-light d-flex align-items-center justify-content-center border" style="width: 45px; height: 45px;">
                                                            <i class="fas fa-image text-muted opacity-50"></i>
                                                        </div>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="/admin/edit-category/<%= cat._id %>" class="category-name"><%= cat.name %></a>
                                                    <div class="row-actions mt-1">
                                                        <a href="/admin/edit-category/<%= cat._id %>" class="text-primary">Sửa</a> | 
                                                        <form action="/admin/delete-category" method="POST" class="d-inline" onsubmit="return confirm('Xóa danh mục này?');">
                                                            <input type="hidden" name="categoryId" value="<%= cat._id %>">
                                                            <button type="submit" class="btn btn-link p-0 text-danger border-0 bg-transparent" style="font-size: 13px;">Xóa</button>
                                                        </form> | 
                                                        <a href="/category/<%= cat.slug %>" target="_blank" class="text-success">Xem</a>
                                                    </div>
                                                </td>
                                                <td class="small text-muted" style="max-width: 250px;">
                                                    <%- cat.description ? (cat.description.replace(/<[^>]*>?/gm, '').substring(0, 60)) + '...' : '—' %>
                                                </td>
                                                <td class="small text-muted"><%= cat.slug %></td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr><td colspan="5" class="text-center py-5 text-muted">Chưa có danh mục nào được tạo.</td></tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div> 
                </div> </div> </div> </div> <script>
        function previewFile() {
            const preview = document.getElementById('previewImg');
            const file = document.getElementById('catImage').files[0];
            const placeholder = document.querySelector('.placeholder-text');

            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                    placeholder.style.display = 'none';
                }
                reader.readAsDataURL(file);
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>