<%- include('../partials/head.ejs') %>
</head>
<body>
    <%- include('../partials/navigation.ejs') %>

    <div class="bg-light py-5 mb-4">
        <div class="container text-center">
            
            <% if (category.image) { %>
                <img src="<%= category.image %>" alt="<%= category.name %>" 
                     class="mb-3 rounded-circle shadow" 
                     style="width: 100px; height: 100px; object-fit: cover;">
            <% } %>

            <h1 class="fw-bold"><%= category.name %></h1>
            
            <div class="text-muted mx-auto" style="max-width: 700px;">
                <%- category.description %> 
            </div>
        </div>
    </div>

    <div class="container mb-5">
        <% if (products.length > 0) { %>
            <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
                <% products.forEach(prod => { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0">
                            <img src="<%= prod.thumbnail %>" class="card-img-top" alt="<%= prod.name %>" style="height: 250px; object-fit: cover;">
                            
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fs-6 fw-bold"><%= prod.name %></h5>
                                <p class="card-text text-danger fw-bold"><%= prod.basePrice.toLocaleString('vi-VN') %> đ</p>
                                
                                <div class="mt-auto">
                                    <a href="/products/<%= prod.slug %>" class="btn btn-outline-dark w-100 btn-sm">Xem chi tiết</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                <h3>Chưa có sản phẩm nào trong danh mục này.</h3>
                <a href="/" class="btn btn-primary mt-2">Quay về trang chủ</a>
            </div>
        <% } %>
    </div>

    <%- include('../partials/footer.ejs') %>
</body>
</html>