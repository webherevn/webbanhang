<%- include('../partials/head.ejs') %>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<style>
    /* Chỉnh cho khung soạn thảo chuyên nghiệp hơn */
    .note-editor { background-color: #fff; border: 1px solid #ccd0d4 !important; }
    .note-editable { min-height: 400px; font-family: sans-serif; }
</style>

<script>
    $(document).ready(function() {
        $('#content-editor').summernote({
            placeholder: 'Nhập nội dung bài viết chi tiết tại đây...',
            tabsize: 2,
            height: 500,
            lang: 'vi-VN', // Nếu bạn muốn dùng tiếng Việt
            toolbar: [
                // Các nhóm tính năng hiện lên thanh công cụ
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear', 'italic', 'strikethrough', 'superscript', 'subscript']],
                ['fontname', ['fontname']],
                ['fontsize', ['fontsize']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video', 'hr']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ],
            fontSizes: ['8', '9', '10', '11', '12', '14', '18', '24', '36', '48' , '64', '82', '150']
        });
    });
</script>

<style>
    body { background-color: #f0f0f1; margin: 0; }
    .admin-wrapper { display: flex; min-height: 100vh; }
    .admin-sidebar-container { width: 240px; position: fixed; top: 0; left: 0; bottom: 0; background-color: #23282d; z-index: 1000; }
    .admin-content { flex: 1; margin-left: 240px; padding: 30px; }
    .wp-card { background: #fff; border: 1px solid #c3c4c7; box-shadow: 0 1px 1px rgba(0,0,0,.04); padding: 20px; border-radius: 2px; }
</style>
</head>
<body>
    <div class="admin-wrapper">
        <div class="admin-sidebar-container">
            <%- include('./partials/sidebar.ejs') %>
        </div>

        <div class="admin-content">
            <h2 class="fw-bold mb-4 h4">Viết bài mới</h2>
            
            <form action="/admin/add-post" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-9">
                        <div class="mb-4">
                            <input type="text" name="title" class="form-control form-control-lg shadow-sm" placeholder="Nhập tiêu đề tại đây" required>
                        </div>
                        <div class="wp-card p-0 overflow-hidden">
                            <textarea id="content-editor" name="content"></textarea>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="wp-card mb-3">
                            <h6 class="fw-bold border-bottom pb-2 mb-3">Đăng bài</h6>
                            <div class="mb-3 small text-muted">
                                <i class="fas fa-map-marker-alt me-1"></i> Trạng thái: <b>Công khai</b>
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm w-100 fw-bold">Đăng bài viết</button>
                        </div>

                        <div class="wp-card mb-3">
                            <h6 class="fw-bold border-bottom pb-2 mb-3">Chuyên mục</h6>
                            <select name="categoryId" class="form-select form-select-sm" required>
                                <% categories.forEach(cat => { %>
                                    <option value="<%= cat._id %>"><%= cat.name %></option>
                                <% }) %>
                            </select>
                        </div>

                        <div class="wp-card">
                            <h6 class="fw-bold border-bottom pb-2 mb-3">Ảnh đại diện</h6>
                            <input type="file" name="thumbnail" class="form-control form-control-sm">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>