<%- include('../partials/head.ejs') %>
</head>
<body>
    <%- include('../partials/navigation.ejs') %>

    <div class="container py-5">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-dark">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Tất cả sản phẩm</li>
            </ol>
        </nav>

        <h2 class="mb-4 fw-bold border-bottom pb-2">Tất cả sản phẩm</h2>

        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            <% if (products.length > 0) { %>
                <% products.forEach(p => { %>
                    <div class="col">
                        <div class="card h-100 border-0 shadow-sm product-card">
                            <a href="/products/<%= p.slug %>" class="overflow-hidden">
                                <img src="<%= p.thumbnail || (p.images && p.images.length > 0 ? p.images[0] : 'https://via.placeholder.com/300') %>" 
                                     class="card-img-top transition-img" 
                                     alt="<%= p.name %>"
                                     style="height: 250px; object-fit: cover; width: 100%;">
                            </a>

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fs-6 fw-bold">
                                    <a href="/products/<%= p.slug %>" class="text-decoration-none text-dark">
                                        <%= p.name %>
                                    </a>
                                </h5>
                                
                                <div class="mb-2">
                                    <% if (p.salePrice > 0) { %>
                                        <span class="text-danger fw-bold"><%= p.salePrice.toLocaleString('vi-VN') %>₫</span>
                                        <span class="text-muted text-decoration-line-through small ms-2"><%= p.basePrice.toLocaleString('vi-VN') %>₫</span>
                                    <% } else { %>
                                        <span class="fw-bold"><%= p.basePrice.toLocaleString('vi-VN') %>₫</span>
                                    <% } %>
                                </div>

                                <form action="/cart/add" method="POST" class="mt-auto">
                                    <input type="hidden" name="productId" value="<%= p._id %>">
                                    <button type="submit" class="btn btn-outline-dark w-100 btn-sm">
                                        <i class="fas fa-shopping-bag me-1"></i> Thêm vào giỏ
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center py-5">
                    <p class="text-muted">Chưa có sản phẩm nào.</p>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('../partials/footer.ejs') %>
</body>
</html>