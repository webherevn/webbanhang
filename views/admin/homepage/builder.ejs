<%- include('../../partials/head.ejs') %>

<style>
    :root { --wp-blue: #2271b1; --bg-light: #f0f2f5; }
    body { background-color: var(--bg-light); font-family: 'Inter', sans-serif; }
    .admin-content { margin-left: 260px; padding: 40px; }
    
    /* Layer Card Style */
    .section-card { 
        background: #fff; border: 1px solid #dcdcde; border-radius: 8px;
        transition: all 0.2s ease; margin-bottom: 12px; cursor: default;
    }
    .section-card:hover { border-color: var(--wp-blue); shadow: 0 4px 12px rgba(0,0,0,0.08); }
    .handle { cursor: grab; color: #9da3a9; padding: 20px; border-right: 1px solid #f0f0f1; }
    .handle:active { cursor: grabbing; }
    
    /* Status Badge */
    .badge-status { font-size: 10px; padding: 4px 10px; border-radius: 20px; font-weight: 600; }
    .status-active { background: #e7f5ec; color: #0d9488; }
</style>

<div class="admin-wrapper">
    <div class="admin-sidebar-container"><%- include('../../partials/sidebar.ejs') %></div>

    <div class="admin-content">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <div>
                <h2 class="fw-bold text-dark mb-1">Trình thiết kế Trang chủ</h2>
                <p class="text-muted small">Sắp xếp và tùy chỉnh các khối nội dung hiển thị trên trang chủ.</p>
            </div>
            <div class="action-buttons">
                <a href="/" target="_blank" class="btn btn-outline-dark me-2 rounded-pill px-4">
                    <i class="fas fa-eye me-2"></i>Xem trước
                </a>
                <button class="btn btn-primary rounded-pill px-4 shadow-sm" data-bs-toggle="modal" data-bs-target="#addSectionModal">
                    <i class="fas fa-plus-circle me-2"></i>Thêm khối mới
                </button>
            </div>
        </div>

        <div id="section-list">
            <% sections.forEach((section, index) => { %>
                <div class="section-card d-flex align-items-center justify-content-between" data-id="<%= section._id %>">
                    <div class="d-flex align-items-center">
                        <div class="handle"><i class="fas fa-grip-vertical"></i></div>
                        <div class="ps-4">
                            <div class="d-flex align-items-center mb-1">
                                <span class="badge bg-light text-dark border me-2" style="font-size: 10px;"><%= section.type.toUpperCase() %></span>
                                <span class="badge-status status-active">ĐANG HIỂN THỊ</span>
                            </div>
                            <h6 class="fw-bold mb-0 text-dark"><%= section.data.title || 'Chưa đặt tiêu đề' %></h6>
                        </div>
                    </div>
                    <div class="pe-4 d-flex gap-2">
                        <a href="/admin/homepage/edit-section/<%= section._id %>" class="btn btn-sm btn-light border rounded-pill px-3">
                            <i class="fas fa-pen-nib me-1"></i> Tùy chỉnh
                        </a>
                        <form action="/admin/homepage/delete-section" method="POST" onsubmit="return confirm('Bạn có chắc muốn xóa khối này?')">
                            <input type="hidden" name="sectionId" value="<%= section._id %>">
                            <button class="btn btn-sm btn-outline-danger border-0 rounded-circle"><i class="fas fa-trash"></i></button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<div class="modal fade" id="addSectionModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header border-0 pb-0">
                <h5 class="fw-bold">Thư viện khối nội dung</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <div class="row g-3">
                    <div class="col-md-6">
                        <a href="/admin/homepage/add-section/hero" class="block-item p-4 border rounded text-center text-decoration-none d-block">
                            <i class="fas fa-image fa-2x mb-3 text-primary"></i>
                            <h6 class="fw-bold text-dark">Main Hero Slider</h6>
                            <p class="text-muted small mb-0">Banner lớn kèm nút bấm thu hút khách hàng.</p>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/admin/homepage/add-section/product-grid" class="block-item p-4 border rounded text-center text-decoration-none d-block">
                            <i class="fas fa-th fa-2x mb-3 text-success"></i>
                            <h6 class="fw-bold text-dark">Product Grid</h6>
                            <p class="text-muted small mb-0">Hiển thị danh sách sản phẩm theo danh mục.</p>
                        </a>
                    </div>
                    </div>
            </div>
        </div>
    </div>
</div>

<style>
    .block-item { transition: 0.3s; }
    .block-item:hover { background: #f8f9fa; border-color: var(--wp-blue) !important; transform: translateY(-5px); }
</style>