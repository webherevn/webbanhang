<% 
    // Logic kiểm tra xem đang ở mục Cài đặt nào không để mở sẵn menu
    const isSettingsActive = path.includes('/admin/customize') || 
                             path.includes('/admin/settings');
%>

<div class="w-100 text-white sidebar-container">
    <div class="p-3 border-bottom border-secondary site-title-block">
        <a href="/" class="text-white text-decoration-none fw-bold d-flex align-items-center">
            <i class="fas fa-home me-2"></i>
            <span>Xem Website</span>
        </a>
    </div>

    <ul class="nav flex-column mt-2 wp-nav">
        
        <li class="nav-item">
            <a class="nav-link text-white py-2 px-3 <%= path === '/admin' ? 'active-wp' : '' %>" href="/admin">
                <div class="icon-w"><i class="fas fa-tachometer-alt"></i></div>
                <span>Bảng tin</span>
            </a>
        </li>

        <hr class="border-secondary mx-3 my-2 opacity-25">

        <li class="nav-item">
            <a class="nav-link text-white py-2 px-3 <%= path.includes('/admin/posts') ? 'active-wp' : '' %>" href="/admin/posts">
                <div class="icon-w"><i class="fas fa-thumbtack"></i></div>
                <span>Bài viết</span>
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-white py-2 px-3 <%= path === '/admin/blog-categories' ? 'active-wp' : '' %>" href="/admin/blog-categories">
                <div class="icon-w"><i class="fas fa-folder"></i></div>
                <span>Chuyên mục</span>
            </a>
        </li>

        <hr class="border-secondary mx-3 my-2 opacity-25">

        <li class="nav-item">
            <a class="nav-link text-white py-2 px-3 <%= path === '/admin/products' || path.includes('/admin/products/') ? 'active-wp' : '' %>" href="/admin/products">
                <div class="icon-w"><i class="fas fa-box"></i></div>
                <span>Sản phẩm</span>
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-white py-2 px-3 <%= path === '/admin/categories' ? 'active-wp' : '' %>" href="/admin/categories">
                <div class="icon-w"><i class="fas fa-tags"></i></div>
                <span>Danh mục SP</span>
            </a>
        </li>

        <hr class="border-secondary mx-3 my-2 opacity-25">

        <li class="nav-item">
            <a class="nav-link text-white py-2 px-3 <%= path.includes('/admin/pages') ? 'active-wp' : '' %>" href="/admin/pages">
                <div class="icon-w"><i class="fas fa-file-alt"></i></div>
                <span>Trang</span>
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-white py-2 px-3 d-flex justify-content-between align-items-center <%= isSettingsActive ? 'active-wp-parent' : '' %>" 
               href="#submenuSettings" 
               data-bs-toggle="collapse" 
               role="button" 
               aria-expanded="<%= isSettingsActive %>">
                <div class="d-flex align-items-center">
                    <div class="icon-w"><i class="fas fa-cog"></i></div>
                    <span>Cài đặt</span>
                </div>
                <i class="fas fa-chevron-down small" style="font-size: 10px;"></i>
            </a>

            <div class="collapse <%= isSettingsActive ? 'show' : '' %>" id="submenuSettings">
                <ul class="nav flex-column bg-dark-soft pb-2">
                    
                    <li class="nav-item">
                        <a class="nav-link text-white-50 py-2 px-3 ps-5 <%= path === '/admin/customize' ? 'text-white fw-bold' : '' %>" href="/admin/customize">
                            <span>Giao diện</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white-50 py-2 px-3 ps-5 <%= path === '/admin/settings' ? 'text-white fw-bold' : '' %>" href="/admin/settings">
                            <span>Cấu hình Script</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white-50 py-2 px-3 ps-5 <%= path === '/admin/settings/menu' ? 'text-white fw-bold' : '' %>" href="/admin/settings/menu">
                            <span>Quản lý Menu</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white-50 py-2 px-3 ps-5 <%= path === '/admin/settings/general' ? 'text-white fw-bold' : '' %>" href="/admin/settings/general">
                            <span>Cài đặt chung</span>
                        </a>
                    </li>

                </ul>
            </div>
        </li>

    </ul>
</div>

<style>
    /* 1. Cấu hình chung cho Sidebar */
    .sidebar-container {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
        font-size: 14px; /* Chuẩn kích thước chữ WP Admin */
        background-color: #1d2327;
        min-height: 100vh;
    }

    /* 2. Style cho từng Link */
    .wp-nav .nav-link {
        color: #f0f0f1;
        transition: all 0.2s ease;
        border-left: 4px solid transparent; /* Tạo border ẩn để khi active thì hiện */
        display: flex;
        align-items: center;
    }

    /* 3. Canh chỉnh Icon icon-w để chữ luôn thẳng hàng */
    .icon-w {
        width: 25px; 
        text-align: center;
        margin-right: 8px;
        opacity: 0.8;
    }

    /* 4. Hiệu ứng Hover */
    .wp-nav .nav-link:hover {
        background-color: #13171b;
        color: #72aee6 !important;
    }
    .wp-nav .nav-link:hover .icon-w {
        opacity: 1;
        color: #72aee6;
    }

    /* 5. Trạng thái Active (Đang chọn) */
    .active-wp {
        background-color: #2271b1 !important;
        border-left-color: #72aee6 !important;
        color: #fff !important;
        font-weight: 600;
    }
    
    /* Active cho mục cha (Khi mục con đang mở) */
    .active-wp-parent {
        background-color: #2c3338 !important; /* Màu xám đậm hơn chút */
        color: #fff !important;
        font-weight: 600;
    }

    /* 6. Style cho Menu con (Submenu) */
    .bg-dark-soft {
        background-color: #101519; /* Nền tối hơn cho menu con */
    }
    .bg-dark-soft .nav-link {
        font-size: 13px; /* Menu con chữ nhỏ hơn 1 xíu */
        border-left: none; /* Không cần border trái cho menu con */
    }
    .bg-dark-soft .nav-link:hover {
        color: #fff !important;
        background-color: transparent;
    }
    .bg-dark-soft .nav-link.text-white {
        color: #fff !important; /* Màu trắng sáng cho item con đang active */
    }
    
    /* 7. Phần Header Sidebar */
    .site-title-block {
        background-color: #1d2327;
    }
    .site-title-block:hover {
        background-color: #13171b;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>