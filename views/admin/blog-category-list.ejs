<%- include('../partials/head.ejs') %>
</head>
<body>
    <%- include('../partials/navigation.ejs') %>
    <div class="container py-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-dark text-white">Thêm Chuyên Mục Mới</div>
                    <div class="card-body">
                        <form action="/admin/add-blog-category" method="POST">
                            <div class="mb-3">
                                <label>Tên chuyên mục</label>
                                <input type="text" name="name" class="form-control" required>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Lưu</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <h3>Danh sách Chuyên mục</h3>
                <table class="table table-bordered">
                    <thead><tr><th>Tên</th><th>Slug</th></tr></thead>
                    <tbody>
                        <% categories.forEach(cat => { %>
                            <tr><td><%= cat.name %></td><td><%= cat.slug %></td></tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>