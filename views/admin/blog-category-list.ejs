<%- include('../partials/head.ejs') %>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<style>
    body { background-color: #f0f0f1; margin: 0; }
    .admin-wrapper { display: flex; min-height: 100vh; }
    .admin-sidebar-container { width: 240px; position: fixed; top: 0; left: 0; bottom: 0; background-color: #23282d; z-index: 1000; }
    .admin-content { flex: 1; margin-left: 240px; padding: 30px; }
    .wp-card { background: #fff; border: 1px solid #c3c4c7; box-shadow: 0 1px 1px rgba(0,0,0,.04); padding: 20px; }
    
    /* Hiệu ứng WordPress: Hover hiện hành động */
    .row-actions { visibility: hidden; font-size: 13px; margin-top: 4px; }
    tr:hover .row-actions { visibility: visible !important; }
    
    .img-preview { width: 100%; height: 120px; background: #f0f0f1; border: 1px dashed #c3c4c7; display: flex; align-items: center; justify-content: center; overflow: hidden; cursor: pointer; border-radius: 4px; }
    .img-preview img { width: 100%; height: 100%; object-fit: cover; display: none; }

    /* Tùy chỉnh Summernote để đồng bộ giao diện Admin */
    .note-editor { border: 1px solid #c3c4c7 !important; background: #fff !important; }
    .note-editable { min-height: 150px; background: #fff !important; }
    .note-toolbar { background: #f0f0f1 !important; border-bottom: 1px solid #c3c4c7 !important; }
</style>
</head>
<body>
    <div class="admin-wrapper">
        <div class="admin-sidebar-container">
            <%- include('./partials/sidebar.ejs') %>
        </div>

        <div class="admin-content">
            <h2 class="fw-bold h4 mb-4 border-bottom pb-3 text-dark">Chuyên mục bài viết</h2>
            
            <div class="row">
                <div class="col-md-4">
                    <div class="wp-card shadow-sm">
                        <h6 class="fw-bold mb-3 text-uppercase small">Thêm chuyên mục mới</h6>
                        <form action="/admin/add-blog-category" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label class="form-label small fw-bold">Tên chuyên mục</label>
                                <input type="text" name="name" class="form-control form-control-sm" required placeholder="Ví dụ: Xu hướng thời trang">
                            </div>

                            <div class="mb-3">
                                <label class="form-label small fw-bold">Mô tả</label>
                                <textarea name="description" id="blogCatDesc"></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label small fw-bold">Ảnh đại diện</label>
                                <div class="img-preview mb-2" onclick="document.getElementById('fileInput').click()">
                                    <span id="placeholder"><i class="fas fa-image me-1"></i> Bấm để chọn ảnh</span>
                                    <img id="previewImg" src="">
                                </div>
                                <input type="file" name="image" id="fileInput" class="d-none" onchange="preview(this)" accept="image/*">
                            </div>

                            <button type="submit" class="btn btn-primary btn-sm w-100 fw-bold shadow-sm">Thêm chuyên mục</button>
                        </form>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="wp-card p-0 shadow-sm overflow-hidden">
                        <table class="table table-hover align-middle mb-0 text-dark">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-3" width="60">Ảnh</th>
                                    <th>Tên</th>
                                    <th>Mô tả</th>
                                    <th>Slug</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (categories.length > 0) { %>
                                    <% categories.forEach(cat => { %>
                                        <tr>
                                            <td class="ps-3">
                                                <img src="<%= cat.image || 'https://via.placeholder.com/40' %>" style="width: 40px; height: 40px; object-fit: cover; border: 1px solid #ddd; border-radius: 2px;">
                                            </td>
                                            <td>
                                                <a href="/admin/edit-blog-category/<%= cat._id %>" class="fw-bold text-decoration-none text-primary"><%= cat.name %></a>
                                                <div class="row-actions">
                                                    <a href="/admin/edit-blog-category/<%= cat._id %>" class="text-primary text-decoration-none">Sửa</a> | 
                                                    <form action="/admin/delete-blog-category" method="POST" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa?')">
                                                        <input type="hidden" name="categoryId" value="<%= cat._id %>">
                                                        <button class="btn btn-link p-0 text-danger border-0 bg-transparent small text-decoration-none">Xóa</button>
                                                    </form> | 
                                                    <a href="/blog/<%= cat.slug %>" target="_blank" class="text-success text-decoration-none">Xem</a>
                                                </div>
                                            </td>
                                            <td class="small text-muted">
                                                <%- cat.description ? (cat.description.replace(/<[^>]*>?/gm, '').substring(0, 50) + '...') : '—' %>
                                            </td>
                                            <td class="small text-muted"><%= cat.slug %></td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr><td colspan="4" class="text-center py-4 text-muted">Chưa có chuyên mục nào.</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div> </div> </div> <script>
        $(document).ready(function() {
            $('#blogCatDesc').summernote({
                placeholder: 'Nhập mô tả ngắn cho chuyên mục...',
                tabsize: 2,
                height: 150,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear', 'italic']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['insert', ['link', 'picture', 'hr']],
                    ['view', ['codeview']]
                ]
            });
        });

        function preview(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var previewImg = document.getElementById('previewImg');
                    var placeholder = document.getElementById('placeholder');
                    previewImg.src = e.target.result;
                    previewImg.style.display = 'block';
                    placeholder.style.display = 'none';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>