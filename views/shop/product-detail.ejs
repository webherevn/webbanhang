<%- include('../partials/head.ejs') %>
</head>
<body>
    <%- include('../partials/navigation.ejs') %>

    <div class="container py-5">
        
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="/category/<%= product.category %>" class="text-decoration-none text-capitalize"><%= product.category %></a></li>
                <li class="breadcrumb-item active" aria-current="page"><%= product.name %></li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="border rounded p-2 mb-3">
                    <img src="<%= product.thumbnail %>" class="img-fluid w-100" style="object-fit: contain; max-height: 500px;" alt="<%= product.name %>">
                </div>
                
                <% if (product.images && product.images.length > 0) { %>
                    <div class="d-flex gap-2 overflow-auto">
                        <% product.images.forEach(img => { %>
                            <img src="<%= img %>" class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover; cursor: pointer;">
                        <% }) %>
                    </div>
                <% } %>
            </div>

            <div class="col-md-6">
                <h1 class="fw-bold mb-3"><%= product.name %></h1>
                
                <div class="mb-3">
                    <% if (product.salePrice > 0) { %>
                        <span class="fs-3 fw-bold text-danger me-2"><%= product.salePrice.toLocaleString('vi-VN') %>₫</span>
                        <span class="fs-5 text-muted text-decoration-line-through"><%= product.basePrice.toLocaleString('vi-VN') %>₫</span>
                    <% } else { %>
                        <span class="fs-3 fw-bold text-danger"><%= product.basePrice.toLocaleString('vi-VN') %>₫</span>
                    <% } %>
                </div>

                <div class="mb-4">
                    <p class="text-muted"><%= product.description ? product.description.replace(/<[^>]*>?/gm, '').substring(0, 150) + '...' : 'Đang cập nhật...' %></p>
                </div>

                <form action="/cart" method="POST" class="d-flex align-items-center mb-4">
                    <input type="hidden" name="productId" value="<%= product._id %>">
                    
                    <div class="input-group me-3" style="width: 130px;">
                        <span class="input-group-text btn btn-light" onclick="this.parentNode.querySelector('input[type=number]').stepDown()">-</span>
                        <input type="number" name="quantity" class="form-control text-center" value="1" min="1">
                        <span class="input-group-text btn btn-light" onclick="this.parentNode.querySelector('input[type=number]').stepUp()">+</span>
                    </div>

                    <button type="submit" class="btn btn-dark btn-lg px-4 flex-grow-1">
                        <i class="fas fa-shopping-bag me-2"></i> Thêm vào giỏ
                    </button>
                </form>
                
                <hr>

                <div class="small text-muted">
                    <div class="mb-2"><i class="fas fa-check-circle text-success me-2"></i> Còn hàng</div>
                    <div class="mb-2"><i class="fas fa-truck me-2"></i> Miễn phí vận chuyển đơn từ 500k</div>
                    <div><i class="fas fa-sync-alt me-2"></i> Đổi trả trong 30 ngày</div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12">
                <h3 class="border-bottom pb-2 mb-4">Mô tả sản phẩm</h3>
                <div class="bg-white p-4 border rounded">
                    <%- product.description %>
                </div>
            </div>
        </div>
        
        <% if (relatedProducts && relatedProducts.length > 0) { %>
            <div class="row mt-5">
                <h3 class="mb-4">Sản phẩm liên quan</h3>
                <% relatedProducts.forEach(prod => { %>
                    <div class="col-md-3 col-6 mb-3">
                        <div class="card h-100 border-0 shadow-sm">
                            <a href="/products/<%= prod.slug %>">
                                <img src="<%= prod.thumbnail %>" class="card-img-top" alt="<%= prod.name %>">
                            </a>
                            <div class="card-body">
                                <h6 class="card-title"><a href="/products/<%= prod.slug %>" class="text-decoration-none text-dark"><%= prod.name %></a></h6>
                                <div class="fw-bold text-danger"><%= prod.basePrice.toLocaleString('vi-VN') %>₫</div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>

    </div>

    <%- include('../partials/footer.ejs') %>
</body>
</html>