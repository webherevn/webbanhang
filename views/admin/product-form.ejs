<%- include('../partials/head.ejs') %>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<style>
    /* Chỉnh cho khung soạn thảo chuyên nghiệp hơn */
    .note-editor { background-color: #fff; border: 1px solid #ccd0d4 !important; }
    .note-editable { min-height: 400px; font-family: sans-serif; }
</style>

<script>
    $(document).ready(function() {
        $('#content-editor').summernote({
            placeholder: 'Nhập nội dung bài viết chi tiết tại đây...',
            tabsize: 2,
            height: 500,
            lang: 'vi-VN', // Nếu bạn muốn dùng tiếng Việt
            toolbar: [
                // Các nhóm tính năng hiện lên thanh công cụ
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear', 'italic', 'strikethrough', 'superscript', 'subscript']],
                ['fontname', ['fontname']],
                ['fontsize', ['fontsize']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video', 'hr']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ],
            fontSizes: ['8', '9', '10', '11', '12', '14', '18', '24', '36', '48' , '64', '82', '150']
        });
    });
</script>

<style>
    /* KHUNG CHUẨN WORDPRESS CMS */
    body { background-color: #f0f0f1; margin: 0; padding: 0; overflow-x: hidden; }
    
    .admin-wrapper { display: flex; min-height: 100vh; }
    
    /* Sidebar cố định bên trái */
    .admin-sidebar-container {
        width: 240px; 
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;
        background-color: #23282d;
        z-index: 1000;
    }

    /* Content đẩy sang phải đúng 240px */
    .admin-content {
        flex: 1;
        margin-left: 240px; 
        padding: 20px 30px;
        min-width: 0; /* Fix lỗi tràn flexbox */
    }

    .wp-card { background: #fff; border: 1px solid #c3c4c7; box-shadow: 0 1px 1px rgba(0,0,0,.04); padding: 20px; margin-bottom: 20px; }
    .postbox-header { border-bottom: 1px solid #c3c4c7; padding: 10px 0; margin-bottom: 15px; font-weight: 600; }
    
    /* Responsive cho màn hình nhỏ */
    @media (max-width: 992px) {
        .admin-sidebar-container { display: none; }
        .admin-content { margin-left: 0; }
    }
</style>
</head>
<body>

    <div class="admin-wrapper">
        <div class="admin-sidebar-container">
            <%- include('./partials/sidebar.ejs') %>
        </div>

        <div class="admin-content">
            <div class="container-fluid">
                <h2 class="fw-bold mb-4 h4"><%= editing ? 'Chỉnh sửa sản phẩm' : 'Thêm sản phẩm mới' %></h2>

                <form action="/admin/<%= editing ? 'edit-product' : 'add-product' %>" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-9">
                            <div class="mb-4">
                                <label class="fw-bold small mb-1">Tên sản phẩm</label>
                                <input type="text" name="name" class="form-control form-control-lg shadow-sm" 
                                       value="<%= editing ? product.name : '' %>" placeholder="Nhập tên sản phẩm..." required>
                            </div>

                            <div class="wp-card">
                                <div class="postbox-header text-uppercase small">Mô tả sản phẩm</div>
                                <textarea name="description" id="prodDesc"><%= editing ? product.description : '' %></textarea>
                            </div>

                            <div class="wp-card">
                                <div class="postbox-header text-uppercase small">Dữ liệu sản phẩm</div>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label small fw-bold">Giá gốc (₫)</label>
                                        <input type="number" name="basePrice" class="form-control" value="<%= editing ? product.basePrice : '' %>" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label small fw-bold">Giá khuyến mãi (₫)</label>
                                        <input type="number" name="salePrice" class="form-control" value="<%= editing ? product.salePrice : '' %>">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="wp-card">
                                <div class="postbox-header text-uppercase small">Hành động</div>
                                <div class="mb-3 small">
                                    <i class="fas fa-eye me-1 text-muted"></i> Trạng thái: <b>Công khai</b>
                                </div>
                                <% if (editing) { %>
                                    <input type="hidden" name="productId" value="<%= product._id %>">
                                <% } %>
                                <button type="submit" class="btn btn-primary w-100 fw-bold">
                                    <%= editing ? 'Cập nhật sản phẩm' : 'Đăng sản phẩm' %>
                                </button>
                            </div>

                            <div class="wp-card">
                                <div class="postbox-header text-uppercase small">Danh mục</div>
                                <select name="category" class="form-select form-select-sm" required>
                                    <% categories.forEach(cat => { %>
                                        <option value="<%= cat._id %>" 
                                            <%= (editing && product.category && product.category.toString() === cat._id.toString()) ? 'selected' : '' %>>
                                            <%= cat.name %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>

                            <div class="wp-card text-center">
                                <div class="postbox-header text-uppercase small">Ảnh sản phẩm</div>
                                <% if (editing && product.thumbnail) { %>
                                    <img src="<%= product.thumbnail %>" class="img-fluid mb-2 border rounded" style="max-height: 150px;">
                                <% } %>
                                <input type="file" name="thumbnail" class="form-control form-control-sm">
                            </div>

                            <div class="wp-card text-center">
                                <div class="postbox-header text-uppercase small">Album hình ảnh</div>
                                <input type="file" name="gallery" class="form-control form-control-sm" multiple>
                                <small class="text-muted mt-2 d-block" style="font-size: 10px;">Có thể chọn nhiều ảnh cùng lúc</small>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        CKEDITOR.replace('prodDesc', {
            height: 300,
            removeButtons: 'PasteFromWord'
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>