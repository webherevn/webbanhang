<% 
    /**
     * LOGIC KIỂM TRA DỮ LIỆU AN TOÀN
     */
    let displayProducts = [];
    if (typeof section !== 'undefined' && section.products) {
        displayProducts = section.products;
    } else if (typeof products !== 'undefined') {
        displayProducts = products;
    }
%>

<section class="py-5" id="product-grid-<%= (typeof section !== 'undefined') ? section._id : 'default' %>">
    <div class="container">
        <div class="d-flex justify-content-between align-items-end mb-4">
            <div>
                <h2 class="fw-bold text-uppercase mb-0">
                    <%= (typeof data !== 'undefined' && data.title) ? data.title : 'Sản phẩm mới' %>
                </h2>
                <div class="bg-danger mt-2" style="width: 60px; height: 3px;"></div>
            </div>
            
            <% if (typeof data !== 'undefined' && data.buttonLink) { %>
                <a href="<%= data.buttonLink %>" class="text-decoration-none text-dark fw-bold border-bottom border-dark pb-1">
                    <%= data.buttonText || 'Xem tất cả' %> <i class="bi bi-arrow-right ms-1"></i>
                </a>
            <% } %>
        </div>

        <div class="row g-4">
            <% if (displayProducts && displayProducts.length > 0) { %>
                <% displayProducts.forEach(product => { %>
                    <div class="col-6 col-md-4 col-lg-3">
                        <%- include('../product-card.ejs', { product: product }) %>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center py-5">
                    <p class="text-muted italic">Hiện chưa có sản phẩm nào trong mục này.</p>
                </div>
            <% } %>
        </div>
    </div>
</section>