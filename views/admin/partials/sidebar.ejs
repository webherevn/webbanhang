    }

    .admin-nav-link:hover {
        background-color: #1d2327;
        color: #72aee6 !important;
    }

    .admin-nav-link.active {
        background-color: #2271b1 !important;
        color: #fff !important;
        border-left: 4px solid #72aee6;
    }

    .admin-nav-link i {
        width: 20px;
        text-align: center;
