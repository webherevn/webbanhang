<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Danh mục</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <script src="https://cdn.ckeditor.com/4.25.0-lts/standard/ckeditor.js"></script>

    <style>
        body { background-color: #f0f0f1; font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif; }
        .wp-card { background: #fff; border: 1px solid #c3c4c7; box-shadow: 0 1px 1px rgba(0,0,0,.04); padding: 20px; }
        .table-head-wp { background-color: #f0f0f1; border-bottom: 2px solid #c3c4c7; font-size: 14px; font-weight: 600; color: #1d2327; }
        .category-name { font-weight: 600; color: #2271b1; text-decoration: none; }
        .category-name:hover { color: #135e96; }
        .row-actions { visibility: hidden; font-size: 13px; }
        tr:hover .row-actions { visibility: visible; }
        
        /* Style cho khung xem trước ảnh */
        .img-preview-box {
            width: 100%;
            height: 150px;
            background: #f0f0f1;
            border: 1px dashed #c3c4c7;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 10px;
            overflow: hidden;
            border-radius: 4px;
        }
        .img-preview-box img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: none; /* Ẩn mặc định */
        }
        .placeholder-text { color: #8c8f94; font-size: 13px; }
    </style>
</head>
<body>

    <div class="d-flex">
        <%- include('partials/sidebar.ejs') %>

        <div class="flex-grow-1" style="height: 100vh; overflow-y: auto;">
            <div class="container-fluid p-4">
                <h2 class="mb-4 fw-bold">Danh mục sản phẩm</h2>

                <div class="row">
                    
                    <div class="col-md-4">
                        <div class="wp-card mb-3">
                            <h5 class="fw-bold mb-3">Thêm danh mục mới</h5>
                            
                            <form action="/admin/categories" method="POST" enctype="multipart/form-data">
                                
                                <div class="mb-3">
                                    <label class="form-label fw-bold small">Tên đường dẫn</label>
                                    <input type="text" name="name" class="form-control" placeholder="Ví dụ: Thời trang Nam" required>
                                    <div class="form-text small">Tên riêng sẽ hiện trên trang web của bạn.</div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold small">Mô tả</label>
                                    <textarea name="description" id="catDesc"></textarea>
                                    <script>
                                        // Kích hoạt CKEditor cho ô textarea này
                                        CKEDITOR.replace('catDesc', { 
                                            height: 150,
                                            toolbar: [ ['Bold', 'Italic', 'Underline', '-', 'NumberedList', 'BulletedList', '-', 'Link', 'Unlink'] ]
                                        });
                                    </script>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label fw-bold small">Ảnh thu nhỏ (Thumbnail)</label>
                                    
                                    <div class="img-preview-box" onclick="document.getElementById('catImage').click()" style="cursor: pointer;">
                                        <span class="placeholder-text"><i class="fas fa-image fa-2x mb-2 d-block text-center"></i>Bấm để chọn ảnh</span>
                                        <img id="previewImg" src="">
                                    </div>
                                    
                                    <input type="file" name="image" id="catImage" class="form-control form-control-sm" accept="image/*" onchange="previewFile()">
                                </div>

                                <button type="submit" class="btn btn-primary btn-sm px-3 fw-bold w-100">Thêm danh mục mới</button>
                            </form>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="wp-card p-0">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-head-wp">
                                    <tr>
                                        <th scope="col" class="ps-3" width="40"><input type="checkbox" class="form-check-input"></th>
                                        <th scope="col" width="60">Ảnh</th>
                                        <th scope="col">Tên</th>
                                        <th scope="col">Mô tả</th>
                                        <th scope="col">Slug</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (categories.length > 0) { %>
                                        <% categories.forEach(cat => { %>
                                            <tr>
                                                <td class="ps-3"><input type="checkbox" class="form-check-input"></td>
                                                
                                                <td>
                                                    <% if (cat.image) { %>
                                                        <img src="<%= cat.image %>" alt="" style="width: 40px; height: 40px; object-fit: cover; border-radius: 4px; border: 1px solid #ddd;">
                                                    <% } else { %>
                                                        <div style="width: 40px; height: 40px; background: #f0f0f1; border-radius: 4px; display: flex; align-items: center; justify-content: center;">
                                                            <i class="fas fa-image text-muted"></i>
                                                        </div>
                                                    <% } %>
                                                </td>

                                                <td>
                                                    <a href="/admin/edit-category/<%= cat._id %>" class="category-name fs-6"><%= cat.name %></a>
                                                    
                                                    <div class="row-actions mt-1">
                                                        <a href="/admin/edit-category/<%= cat._id %>" class="text-primary text-decoration-none">Sửa</a>
                                                        <span class="text-muted mx-1">|</span>
                                                        <form action="/admin/delete-category" method="POST" class="d-inline" onsubmit="return confirm('Xóa danh mục này?');">
                                                            <input type="hidden" name="categoryId" value="<%= cat._id %>">
                                                            <button type="submit" class="btn btn-link p-0 text-danger text-decoration-none border-0 bg-transparent" style="font-size: 13px;">Xóa vĩnh viễn</button>
                                                        </form>
                                                    </div>
                                                </td>

                                                <td class="small text-muted">
                                                    <%- cat.description ? (cat.description.length > 50 ? cat.description.substring(0, 50) + '...' : cat.description) : '—' %>
                                                </td>

                                                <td class="small"><%= cat.slug %></td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center py-4 text-muted">Chưa có danh mục nào.</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div> </div>
            </div>
        </div>
    </div>

    <script>
        function previewFile() {
            const preview = document.getElementById('previewImg');
            const file = document.getElementById('catImage').files[0];
            const placeholder = document.querySelector('.placeholder-text');

            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                    placeholder.style.display = 'none'; // Ẩn chữ hướng dẫn
                }
                reader.readAsDataURL(file);
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>