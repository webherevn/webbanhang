<%- include('../partials/head.ejs') %>
<style>
    .transition-img { transition: transform 0.5s ease; }
    .card:hover .transition-img { transform: scale(1.1); }
    
    /* Nội dung bài viết */
    .blog-content { line-height: 1.8; color: #333; }
    .blog-content img { max-width: 100%; height: auto; border-radius: 8px; margin: 20px 0; }

    /* Sidebar Styling - Tinh chỉnh cho cột 3 */
    .sidebar-widget { background: #fff; border: 1px solid #eee; border-radius: 10px; padding: 15px; margin-bottom: 25px; }
    .widget-title { font-weight: 700; font-size: 16px; margin-bottom: 15px; padding-bottom: 8px; border-bottom: 2px solid #007bff; display: inline-block; }
    
    .latest-post-item { display: flex; gap: 10px; margin-bottom: 15px; text-decoration: none; color: inherit; align-items: start; }
    /* Giảm kích thước ảnh sidebar để fit cột 3 */
    .latest-post-item img { width: 65px; height: 50px; object-fit: cover; border-radius: 6px; flex-shrink: 0; }
    .latest-post-item h6 { font-size: 13px; line-height: 1.4; margin-bottom: 2px; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
    .latest-post-item:hover h6 { color: #007bff; }
    
    /* Cập nhật TOC */
    .toc-container {
        background: #f8fafc;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 30px;
        width: 100%;
    }
    .toc-header { display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #e2e8f0; padding-bottom: 8px; margin-bottom: 10px; }
    .toc-title { font-weight: 700; color: #1e293b; font-size: 15px; }
    .toc-toggle { cursor: pointer; font-size: 11px; background: #e2e8f0; padding: 2px 6px; border-radius: 4px; }
    .toc-list { list-style: none; padding: 0; margin: 0; }
    .toc-list a { font-size: 14px; color: #64748b; text-decoration: none; }
    .toc-list a:hover { color: #007bff; }
    .toc-item-h3 { margin-left: 15px; }
    .toc-list.collapsed { display: none; }

    .sticky-sidebar { position: sticky; top: 20px; }
</style>
</head>
<body>
    <%- include('../partials/shop-header.ejs') %>

    <div class="container py-5">
        <div class="row">
            <div class="col-lg-9 pe-lg-5">
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb small">
                        <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-muted">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="/blog" class="text-decoration-none text-muted">Tin tức</a></li>
                        <li class="breadcrumb-item active text-dark" aria-current="page"><%= post.title.substring(0, 30) %>...</li>
                    </ol>
                </nav>

                <article>
                    <h1 class="fw-bold mb-3" style="font-size: 2.2rem; line-height: 1.3;"><%= post.title %></h1>
                    
                    <div class="text-muted mb-4 d-flex flex-wrap gap-3 align-items-center small">
                        <span><i class="far fa-calendar-alt me-1"></i> <%= post.createdAt.toLocaleDateString('vi-VN') %></span>
                        <span><i class="far fa-folder-open me-1"></i> <%= post.category ? post.category.name : 'Chung' %></span>
                        <span><i class="far fa-eye me-1"></i> <%= post.views %> lượt xem</span>
                    </div>

                    <img src="<%= post.thumbnail %>" class="img-fluid rounded shadow-sm mb-4 w-100" style="max-height: 500px; object-fit: cover;" alt="<%= post.title %>">

                    <div id="toc-placeholder"></div>

                    <div class="blog-content fs-5">
                        <div id="post-content" class="entry-content">
                            <%- post.content %>
                        </div>
                    </div>
                </article>

                <div class="related-posts mt-5 pt-4 border-top">
                    <% if(relatedPosts.length > 0) { %>
                        <h4 class="fw-bold mb-4">Bài viết liên quan</h4>
                        <div class="row g-3">
                            <% relatedPosts.forEach(rp => { %>
                                <div class="col-md-4">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <a href="/blog/<%= rp.slug %>">
                                            <img src="<%= rp.thumbnail %>" class="card-img-top transition-img" style="height: 140px; object-fit: cover;">
                                        </a>
                                        <div class="card-body p-3">
                                            <h6 class="card-title mb-0" style="font-size: 14px;">
                                                <a href="/blog/<%= rp.slug %>" class="text-decoration-none text-dark fw-bold">
                                                    <%= rp.title %>
                                                </a>
                                            </h6>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } %>
                </div>
            </div>

            <div class="col-lg-3 mt-5 mt-lg-0">
                <aside class="sticky-sidebar">
                    
                    <div class="sidebar-widget">
                        <h5 class="widget-title">Tìm kiếm</h5>
                        <form action="/blog/search" method="GET">
                            <div class="input-group input-group-sm">
                                <input type="text" name="q" class="form-control border-end-0" placeholder="Tìm bài viết...">
                                <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
                            </div>
                        </form>
                    </div>

                    <div class="sidebar-widget">
                        <h5 class="widget-title">Chuyên mục</h5>
                        <div class="list-group list-group-flush small">
                            <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center px-0 bg-transparent">
                                Thời trang Nam <span class="text-muted">(12)</span>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center px-0 bg-transparent">
                                Bộ sưu tập mới <span class="text-muted">(5)</span>
                            </a>
                        </div>
                    </div>

                    <div class="sidebar-widget">
                        <h5 class="widget-title">Mới nhất</h5>
                        <% if(typeof latestPosts !== 'undefined' && latestPosts.length > 0) { %>
                            <% latestPosts.forEach(lp => { %>
                                <a href="/blog/<%= lp.slug %>" class="latest-post-item">
                                    <img src="<%= lp.thumbnail %>" alt="<%= lp.title %>">
                                    <div>
                                        <h6 class="fw-bold text-dark"><%= lp.title %></h6>
                                        <small class="text-muted" style="font-size: 10px;"><%= lp.createdAt.toLocaleDateString('vi-VN') %></small>
                                    </div>
                                </a>
                            <% }) %>
                        <% } else { %>
                            <p class="small text-muted text-center">Đang cập nhật...</p>
                        <% } %>
                    </div>

                    <div class="sidebar-widget bg-light border-0 text-center py-4">
                        <i class="fas fa-envelope-open-text fa-2x text-primary mb-3"></i>
                        <h6 class="fw-bold">Bản tin thời trang</h6>
                        <p class="text-muted" style="font-size: 11px;">Nhận xu hướng mới nhất hàng tuần.</p>
                        <div class="px-2">
                            <input type="email" class="form-control form-control-sm mb-2" placeholder="Email của bạn">
                            <button class="btn btn-primary btn-sm w-100">Đăng ký</button>
                        </div>
                    </div>

                </aside>
            </div>
        </div>
    </div>

    <%- include('../partials/footer.ejs') %>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const contentArea = document.getElementById('post-content');
            const tocPlaceholder = document.getElementById('toc-placeholder');
            if (!contentArea || !tocPlaceholder) return;
            const headings = contentArea.querySelectorAll('h2, h3');
            if (headings.length < 2) return;

            let tocHtml = `
                <div class="toc-container shadow-sm">
                    <div class="toc-header">
                        <div class="toc-title"><i class="fas fa-stream me-2 text-primary"></i> Mục lục bài viết</div>
                        <div class="toc-toggle" id="toc-toggle-btn">Ẩn</div>
                    </div>
                    <ul class="toc-list" id="toc-main-list">
            `;

            headings.forEach((heading, index) => {
                const id = heading.id || `section-${index}`;
                heading.id = id;
                const level = heading.tagName.toLowerCase();
                const text = heading.innerText;
                tocHtml += `<li class="toc-item-${level} py-1"><a href="#${id}"><i class="fas fa-chevron-right me-2 small" style="font-size: 8px;"></i>${text}</a></li>`;
            });

            tocHtml += `</ul></div>`;
            tocPlaceholder.innerHTML = tocHtml;

            const toggleBtn = document.getElementById('toc-toggle-btn');
            const tocList = document.getElementById('toc-main-list');
            toggleBtn.addEventListener('click', function() {
                if (tocList.classList.contains('collapsed')) {
                    tocList.classList.remove('collapsed');
                    toggleBtn.innerText = 'Ẩn';
                } else {
                    tocList.classList.add('collapsed');
                    toggleBtn.innerText = 'Hiện';
                }
            });
        });
    </script>
</body>