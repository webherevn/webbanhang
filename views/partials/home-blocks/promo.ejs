<section class="py-5 bg-dark text-white text-center" 
         style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= data.bgImage %>'); 
         background-size: cover; background-position: center; background-attachment: fixed;">
    <div class="container py-5">
        <h2 class="display-4 fw-bold mb-3"><%= data.title %></h2>
        <p class="lead mb-4 mx-auto" style="max-width: 600px;"><%= data.subtitle %></p>
        <a href="<%= data.buttonLink %>" class="btn btn-outline-light rounded-0 px-5 py-2 fw-bold">
            <%= data.buttonText %>
        </a>
    </div>
</section>