<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Danh mục</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        body { background-color: #f0f0f1; font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif; }
        
        /* Box Style giống WordPress */
        .wp-card { 
            background: #fff; 
            border: 1px solid #c3c4c7; 
            box-shadow: 0 1px 1px rgba(0,0,0,.04); 
            padding: 20px; 
        }
        
        /* Table Header Style */
        .table-head-wp { 
            background-color: #f0f0f1; 
            border-bottom: 2px solid #c3c4c7;
            font-size: 14px; 
            font-weight: 600; 
            color: #1d2327; 
        }

        /* Link danh mục đậm */
        .category-name {
            font-weight: 600;
            color: #2271b1;
            text-decoration: none;
        }
        .category-name:hover {
            color: #135e96;
        }

        /* Ẩn hiện nút hành động khi hover (Giống WP) */
        .row-actions { visibility: hidden; font-size: 13px; }
        tr:hover .row-actions { visibility: visible; }
    </style>
</head>
<body>

    <div class="d-flex">
        
        <%- include('partials/sidebar.ejs') %>

        <div class="flex-grow-1" style="height: 100vh; overflow-y: auto;">
            
            <div class="container-fluid p-4">
                <h2 class="mb-4 fw-bold">Danh mục sản phẩm</h2>

                <div class="row">
                    
                    <div class="col-md-4">
                        <div class="wp-card mb-3">
                            <h5 class="fw-bold mb-3">Thêm danh mục mới</h5>
                            <form action="/admin/categories" method="POST">
                                
                                <div class="mb-3">
                                    <label class="form-label fw-bold small">Tên đường dẫn</label>
                                    <input type="text" name="name" class="form-control" placeholder="Ví dụ: Áo Thun" required>
                                    <div class="form-text small">Tên riêng sẽ hiện trên trang web của bạn.</div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold small">Mô tả</label>
                                    <textarea name="description" class="form-control" rows="4"></textarea>
                                    <div class="form-text small">Mô tả này thường không được hiển thị trong các giao diện.</div>
                                </div>

                                <button type="submit" class="btn btn-primary btn-sm px-3 fw-bold">Thêm danh mục</button>
                            </form>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="wp-card p-0">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-head-wp">
                                    <tr>
                                        <th scope="col" class="ps-3"><input type="checkbox" class="form-check-input"></th>
                                        <th scope="col">Tên</th>
                                        <th scope="col">Slug</th>
                                        <th scope="col">Mô tả</th>
                                        <th scope="col" class="text-end pe-3">Lượt</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (categories.length > 0) { %>
                                        <% categories.forEach(cat => { %>
                                            <tr>
                                                <td class="ps-3"><input type="checkbox" class="form-check-input"></td>
                                                
                                                <td>
                                                    <a href="/admin/edit-category/<%= cat._id %>" class="category-name fs-6"><%= cat.name %></a>
                                                    
                                                    <div class="row-actions mt-1">
                                                        <a href="/admin/edit-category/<%= cat._id %>" class="text-primary text-decoration-none">Sửa</a>
                                                        <span class="text-muted mx-1">|</span>
                                                        
                                                        <form action="/admin/delete-category" method="POST" class="d-inline" onsubmit="return confirm('Xóa danh mục này?');">
                                                            <input type="hidden" name="categoryId" value="<%= cat._id %>">
                                                            <button type="submit" class="btn btn-link p-0 text-danger text-decoration-none border-0 bg-transparent" style="font-size: 13px;">Xóa vĩnh viễn</button>
                                                        </form>
                                                    </div>
                                                </td>

                                                <td><%= cat.slug %></td>
                                                <td class="small text-muted"><%= cat.description ? cat.description : '—' %></td>
                                                <td class="text-end pe-3"><span class="badge bg-secondary rounded-pill">0</span></td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center py-4 text-muted">Chưa có danh mục nào.</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div> </div> </div>
        </div> </div> <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>