<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giỏ Hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">FASHION SHOP</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link active" href="/cart">
                    Giỏ hàng (<%= cart.totalQuantity %>)
                </a>
            </div>
        </div>
    </nav>

    <div class="container">
        <h2 class="mb-4">Giỏ Hàng Của Bạn</h2>

        <% if (cart.items.length > 0) { %>
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Phân loại</th>
                            <th>Đơn giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% cart.items.forEach(item => { %>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="<%= item.image %>" width="50" class="me-2 rounded">
                                        <span><%= item.name %></span>
                                    </div>
                                </td>
                                <td><span class="badge bg-secondary"><%= item.variant %></span></td>
                                <td><%= item.price.toLocaleString('vi-VN') %> đ</td>
                                <td><%= item.quantity %></td>
                                <td class="fw-bold"><%= item.total.toLocaleString('vi-VN') %> đ</td>
                                <td>
                                    <form action="/cart/delete" method="POST">
                                        <input type="hidden" name="productId" value="<%= item.productId %>">
                                        <input type="hidden" name="variant" value="<%= item.variant %>">
                                        <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <div class="row mt-4">
                <div class="col-md-6 offset-md-6">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h4 class="d-flex justify-content-between">
                                <span>Tổng cộng:</span>
                                <span class="text-danger fw-bold"><%= cart.totalPrice.toLocaleString('vi-VN') %> đ</span>
                            </h4>
                            <hr>
                            <a href="/checkout" class="btn btn-dark w-100 btn-lg">TIẾN HÀNH ĐẶT HÀNG</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <h3>Giỏ hàng đang trống!</h3>
                <a href="/" class="btn btn-primary mt-3">Quay lại mua sắm</a>
            </div>
        <% } %>
    </div>
</body>
</html>