<%- include('../partials/head.ejs') %>
<style>
    .transition-img { transition: transform 0.5s ease; }
    .card:hover .transition-img { transform: scale(1.1); }
    .blog-header { background: #f8f9fa; border-bottom: 1px solid #eee; padding: 60px 0; }
    
    /* Nội dung bài viết */
    .blog-content { line-height: 1.8; color: #333; }
    .blog-content img { max-width: 100%; height: auto; border-radius: 8px; }

    /* Sidebar Styling */
    .sidebar-widget { background: #fff; border: 1px solid #eee; border-radius: 8px; padding: 20px; margin-bottom: 30px; }
    .widget-title { font-weight: 700; font-size: 18px; margin-bottom: 20px; padding-bottom: 10px; border-bottom: 2px solid #007bff; display: inline-block; }
    .latest-post-item { display: flex; gap: 12px; margin-bottom: 15px; text-decoration: none; color: inherit; }
    .latest-post-item img { width: 80px; height: 60px; object-fit: cover; border-radius: 4px; }
    .latest-post-item:hover h6 { color: #007bff; }
    
    /* Cập nhật TOC cho phù hợp với 2 cột */
    .toc-container {
        background: #f8fafc;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 25px;
        width: 100%; /* Đổi từ float sang full width trong cột nội dung */
    }
    .toc-header { display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #e2e8f0; padding-bottom: 8px; margin-bottom: 10px; }
    .toc-title { font-weight: 700; color: #1e293b; }
    .toc-list { list-style: none; padding: 0; margin: 0; }
    .toc-item-h3 { margin-left: 20px; font-size: 0.9em; }
    .toc-list.collapsed { display: none; }
</style>
</head>
<body>
    <%- include('../partials/shop-header.ejs') %>

    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-muted">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="/blog" class="text-decoration-none text-muted">Tin tức</a></li>
                        <li class="breadcrumb-item active text-dark" aria-current="page"><%= post.title.substring(0, 30) %>...</li>
                    </ol>
                </nav>

                <article>
                    <h1 class="fw-bold mb-3" style="font-size: 2.5rem;"><%= post.title %></h1>
                    
                    <div class="text-muted mb-4 d-flex flex-wrap gap-3 align-items-center small">
                        <span><i class="far fa-calendar-alt me-1"></i> <%= post.createdAt.toLocaleDateString('vi-VN') %></span>
                        <span><i class="far fa-folder-open me-1"></i> <%= post.category ? post.category.name : 'Chung' %></span>
                        <span><i class="far fa-eye me-1"></i> <%= post.views %> lượt xem</span>
                    </div>

                    <img src="<%= post.thumbnail %>" class="img-fluid rounded shadow-sm mb-4 w-100" alt="<%= post.title %>">

                    <div id="toc-placeholder"></div>

                    <div class="blog-content fs-5">
                        <div id="post-content" class="entry-content">
                            <%- post.content %>
                        </div>
                    </div>
                </article>

                <div class="related-posts mt-5">
                    <% if(relatedPosts.length > 0) { %>
                        <h4 class="fw-bold mb-4 border-bottom pb-2">Bài viết liên quan</h4>
                        <div class="row g-4">
                            <% relatedPosts.forEach(rp => { %>
                                <div class="col-md-4">
                                    <div class="card h-100 border-0 shadow-sm overflow-hidden">
                                        <a href="/blog/<%= rp.slug %>">
                                            <img src="<%= rp.thumbnail %>" class="card-img-top transition-img" style="height: 160px; object-fit: cover;">
                                        </a>
                                        <div class="card-body p-3">
                                            <h6 class="card-title mb-0">
                                                <a href="/blog/<%= rp.slug %>" class="text-decoration-none text-dark fw-bold small">
                                                    <%= rp.title %>
                                                </a>
                                            </h6>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } %>
                </div>
            </div>

            <div class="col-lg-4 mt-5 mt-lg-0">
                <aside class="sticky-top" style="top: 20px;">
                    
                    <div class="sidebar-widget">
                        <h5 class="widget-title">Tìm kiếm</h5>
                        <form action="/blog/search" method="GET">
                            <div class="input-group">
                                <input type="text" name="q" class="form-control" placeholder="Nhập từ khóa...">
                                <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
                            </div>
                        </form>
                    </div>

                    <div class="sidebar-widget">
                        <h5 class="widget-title">Chuyên mục</h5>
                        <div class="list-group list-group-flush">
                            <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center px-0">
                                Thời trang Nam <span class="badge bg-light text-dark rounded-pill">12</span>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center px-0">
                                Xu hướng 2026 <span class="badge bg-light text-dark rounded-pill">8</span>
                            </a>
                        </div>
                    </div>

                    <div class="sidebar-widget">
                        <h5 class="widget-title">Bài viết mới nhất</h5>
                        <% if(typeof latestPosts !== 'undefined') { %>
                            <% latestPosts.forEach(lp => { %>
                                <a href="/blog/<%= lp.slug %>" class="latest-post-item">
                                    <img src="<%= lp.thumbnail %>" alt="<%= lp.title %>">
                                    <div>
                                        <h6 class="mb-1 small fw-bold" style="line-height: 1.4;"><%= lp.title %></h6>
                                        <small class="text-muted"><%= lp.createdAt.toLocaleDateString('vi-VN') %></small>
                                    </div>
                                </a>
                            <% }) %>
                        <% } else { %>
                            <p class="small text-muted">Đang cập nhật...</p>
                        <% } %>
                    </div>

                    <div class="sidebar-widget bg-dark text-white text-center">
                        <h5 class="fw-bold mb-3">Fashion Store</h5>
                        <p class="small">Đăng ký để nhận tin tức khuyến mãi mới nhất từ chúng tôi.</p>
                        <button class="btn btn-outline-light btn-sm">Đăng ký ngay</button>
                    </div>

                </aside>
            </div>
        </div>
    </div>

    <%- include('../partials/footer.ejs') %>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const contentArea = document.getElementById('post-content');
            const tocPlaceholder = document.getElementById('toc-placeholder');
            if (!contentArea || !tocPlaceholder) return;
            const headings = contentArea.querySelectorAll('h2, h3');
            if (headings.length < 2) return;

            let tocHtml = `
                <div class="toc-container">
                    <div class="toc-header">
                        <div class="toc-title"><i class="fas fa-list-ul me-2"></i> Mục lục bài viết</div>
                        <div class="toc-toggle" id="toc-toggle-btn">[Ẩn]</div>
                    </div>
                    <ul class="toc-list" id="toc-main-list">
            `;

            headings.forEach((heading, index) => {
                const id = heading.id || `section-${index}`;
                heading.id = id;
                const level = heading.tagName.toLowerCase();
                const text = heading.innerText;
                tocHtml += `<li class="toc-item-${level}"><a href="#${id}" class="text-decoration-none text-muted">${text}</a></li>`;
            });

            tocHtml += `</ul></div>`;
            tocPlaceholder.innerHTML = tocHtml;

            const toggleBtn = document.getElementById('toc-toggle-btn');
            const tocList = document.getElementById('toc-main-list');
            toggleBtn.addEventListener('click', function() {
                if (tocList.classList.contains('collapsed')) {
                    tocList.classList.remove('collapsed');
                    toggleBtn.innerText = '[Ẩn]';
                } else {
                    tocList.classList.add('collapsed');
                    toggleBtn.innerText = '[Hiện]';
                }
            });
        });
    </script>
</body>