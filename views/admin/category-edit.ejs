<%- include('../partials/head.ejs') %>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<style>
    /* 1. ĐỒNG BỘ BIẾN HỆ THỐNG */
    :root {
        --sidebar-width: 240px;
        --admin-bg: #f0f0f1;
        --sidebar-bg: #23282d;
        --wp-blue: #2271b1;
        --base-font: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen-Sans,Ubuntu,Cantarell,"Helvetica Neue",sans-serif;
    }

    body { 
        background-color: var(--admin-bg); 
        margin: 0; padding: 0; 
        font-family: var(--base-font);
        font-size: 14px; 
        color: #3c434a;
        overflow-x: hidden;
    }

    /* 2. ĐỒNG BỘ LAYOUT */
    .admin-wrapper { display: flex; min-height: 100vh; }
    
    .admin-sidebar-container { 
        width: var(--sidebar-width); 
        position: fixed; 
        top: 0; left: 0; bottom: 0; 
        background-color: var(--sidebar-bg); 
        z-index: 1000; 
    }

    .admin-content { 
        flex: 1; 
        margin-left: var(--sidebar-width); 
        padding: 30px; 
        min-width: 0;
    }

    /* 3. ĐỒNG BỘ CARD & COMPONENT */
    .wp-card { 
        background: #fff; 
        border: 1px solid #c3c4c7; 
        box-shadow: 0 1px 1px rgba(0,0,0,.04); 
        padding: 20px; 
        margin-bottom: 20px; 
    }

    .postbox-header { 
        border-bottom: 1px solid #f0f0f1; 
        padding-bottom: 10px; 
        margin-bottom: 15px; 
        font-weight: 700; 
        color: #1d2327;
        text-transform: uppercase;
        font-size: 13px;
        letter-spacing: 0.5px;
    }

    /* Image Preview */
    .img-preview-box {
        width: 100%; height: 160px; background: #f8f9fa; border: 1px solid #dcdcde;
        display: flex; align-items: center; justify-content: center;
        margin-bottom: 10px; overflow: hidden; border-radius: 2px;
    }
    .img-preview-box img { width: 100%; height: 100%; object-fit: contain; }

    .form-label { font-weight: 600; font-size: 13px; color: #1d2327; }
    .note-editor { border: 1px solid #c3c4c7 !important; border-radius: 0 !important; }

    @media (max-width: 992px) { 
        .admin-sidebar-container { display: none; } 
        .admin-content { margin-left: 0; padding: 15px; } 
    }
</style>
</head>
<body>
    <div class="admin-wrapper">
        <div class="admin-sidebar-container">
            <%- include('./partials/sidebar.ejs') %>
        </div>

        <div class="admin-content">
            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fw-bold h4 mb-0 text-dark">Chỉnh sửa danh mục</h2>
                    <a href="/admin/categories" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                    </a>
                </div>
                
                <form action="/admin/edit-category" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="categoryId" value="<%= category._id %>">

                    <div class="row">
                        <div class="col-md-9">
                            <div class="wp-card">
                                <div class="mb-3">
                                    <label class="form-label">Tên danh mục</label>
                                    <input type="text" name="name" class="form-control form-control-lg fw-bold shadow-sm" 
                                           style="border-radius: 2px;"
                                           value="<%= category.name %>" required>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Slug (Đường dẫn tĩnh)</label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-light text-muted">/category/</span>
                                        <input type="text" class="form-control bg-light" value="<%= category.slug %>" disabled readonly>
                                    </div>
                                    <small class="text-muted mt-1 d-block" style="font-size: 11px;">Slug được tạo tự động và không nên thay đổi để đảm bảo SEO.</small>
                                </div>

                                <div class="mb-0">
                                    <label class="form-label">Mô tả chi tiết</label>
                                    <textarea name="description" id="catEditor"><%= category.description %></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="wp-card sticky-top" style="top: 20px;">
                                <div class="postbox-header">Hành động</div>
                                <div class="small text-muted mb-3">
                                    <i class="fas fa-calendar-check me-1"></i> Ngày tạo: <br>
                                    <span class="text-dark fw-bold ms-3"><%= category.createdAt.toLocaleDateString('vi-VN') %></span>
                                </div>
                                <button type="submit" class="btn btn-primary w-100 fw-bold shadow-sm">
                                    <i class="fas fa-save me-2"></i> Cập nhật ngay
                                </button>
                                <hr>
                                <div class="text-center">
                                    <a href="/category/<%= category.slug %>" target="_blank" class="small text-success text-decoration-none fw-bold">
                                        <i class="fas fa-eye me-1"></i> Xem ngoài trang chủ
                                    </a>
                                </div>
                            </div>

                            <div class="wp-card">
                                <div class="postbox-header">Ảnh đại diện</div>
                                <div class="img-preview-box mb-3">
                                    <% if (category.image) { %>
                                        <img id="previewImg" src="<%= category.image %>" alt="Preview">
                                    <% } else { %>
                                        <img id="previewImg" src="https://via.placeholder.com/150?text=No+Image" alt="No Image">
                                    <% } %>
                                </div>
                                <input type="file" name="image" class="form-control form-control-sm" accept="image/*" onchange="previewFile(this)">
                                <div class="form-text small mt-2 lh-sm" style="font-size: 11px;">
                                    <i class="fas fa-info-circle me-1"></i> Chọn ảnh mới nếu bạn muốn thay đổi ảnh hiện tại.
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            $('#catEditor').summernote({
                height: 300,
                placeholder: 'Nhập mô tả cho danh mục tại đây...',
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['insert', ['link', 'picture', 'hr']],
                    ['view', ['fullscreen', 'codeview']]
                ]
            });
        });

        function previewFile(input) {
            const preview = document.getElementById('previewImg');
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>