<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thanh Toán</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container py-5">
        <h2 class="text-center mb-4">Xác Nhận Đơn Hàng</h2>
        
        <div class="row">
            <div class="col-md-7">
                <div class="card p-4 mb-4">
                    <h4 class="mb-3">Thông tin giao hàng</h4>
                    <form action="/checkout" method="POST">
                        <div class="mb-3">
                            <label class="form-label">Họ và tên</label>
                            <input type="text" name="name" class="form-control" required placeholder="Nguyễn Văn A">
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" name="email" class="form-control" required placeholder="email@example.com">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Số điện thoại</label>
                                <input type="tel" name="phone" class="form-control" required placeholder="0912345678">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Địa chỉ nhận hàng</label>
                            <input type="text" name="address" class="form-control" required placeholder="Số 1, Đường ABC, Quận XYZ...">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ghi chú (Tùy chọn)</label>
                            <textarea name="note" class="form-control" rows="2"></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mt-3">XÁC NHẬN ĐẶT HÀNG</button>
                    </form>
                </div>
            </div>

            <div class="col-md-5">
                <div class="card p-4">
                    <h4 class="mb-3">Đơn hàng của bạn</h4>
                    <ul class="list-group list-group-flush">
                        <% cart.items.forEach(item => { %>
                            <li class="list-group-item d-flex justify-content-between lh-sm">
                                <div>
                                    <h6 class="my-0"><%= item.name %></h6>
                                    <small class="text-muted"><%= item.variant %> (x<%= item.quantity %>)</small>
                                </div>
                                <span class="text-muted"><%= item.total.toLocaleString('vi-VN') %> đ</span>
                            </li>
                        <% }) %>
                        <li class="list-group-item d-flex justify-content-between bg-light fw-bold mt-2">
                            <span>Thành tiền (VNĐ)</span>
                            <span class="text-danger"><%= cart.totalPrice.toLocaleString('vi-VN') %> đ</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>
</html>