<%- include('../partials/head.ejs') %>
</head>
<body>
    <%- include('../partials/navigation.ejs') %>
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold">Danh Sách Bài Viết</h2>
            <a href="/admin/add-post" class="btn btn-success"><i class="fas fa-plus"></i> Viết bài mới</a>
        </div>

        <table class="table table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Ảnh</th>
                    <th>Tiêu đề</th>
                    <th>Chuyên mục</th>
                    <th>Ngày đăng</th>
                    <th>Lượt xem</th>
                </tr>
            </thead>
            <tbody>
                <% if(posts.length > 0) { %>
                    <% posts.forEach(p => { %>
                        <tr>
                            <td><img src="<%= p.thumbnail %>" style="width: 60px; height: 40px; object-fit: cover;"></td>
                            <td style="max-width: 300px;"><%= p.title %></td>
                            <td><span class="badge bg-info text-dark"><%= p.category ? p.category.name : 'Chưa phân loại' %></span></td>
                            <td><%= p.createdAt.toLocaleDateString('vi-VN') %></td>
                            <td><%= p.views %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr><td colspan="5" class="text-center">Chưa có bài viết nào.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>