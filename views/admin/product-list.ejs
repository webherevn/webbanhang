<%- include('../partials/head.ejs') %>

<style>
    /* 1. ĐỒNG BỘ BIẾN HỆ THỐNG */
    :root {
        --sidebar-width: 240px;
        --admin-bg: #f0f0f1;
        --sidebar-bg: #23282d;
        --wp-blue: #2271b1;
        --base-font: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen-Sans,Ubuntu,Cantarell,"Helvetica Neue",sans-serif;
    }

    body { 
        margin: 0; 
        background-color: var(--admin-bg); 
        font-family: var(--base-font);
        font-size: 14px;
        color: #3c434a;
    }

    /* 2. ĐỒNG BỘ LAYOUT */
    .admin-wrapper { display: flex; min-height: 100vh; }
    
    .admin-sidebar-container { 
        width: var(--sidebar-width); 
        position: fixed; 
        top: 0; left: 0; bottom: 0; 
        background-color: var(--sidebar-bg); 
        z-index: 1000; 
    }
    
    .admin-content { 
        flex: 1; 
        margin-left: var(--sidebar-width); 
        padding: 30px; 
        min-width: 0;
    }

    /* 3. WP STYLE TABLE & CARD */
    .wp-card { 
        background: #fff; 
        border: 1px solid #c3c4c7; 
        box-shadow: 0 1px 1px rgba(0,0,0,.04); 
    }
    
    .table-head-wp { 
        background-color: #fff; 
        border-bottom: 2px solid #dcdcde; 
        color: #1d2327; 
    }

    .table-head-wp th {
        font-weight: 600;
        padding: 12px 10px;
        font-size: 14px;
    }

    .product-name-link { 
        font-weight: 600; 
        color: var(--wp-blue); 
        text-decoration: none; 
        font-size: 14px; 
        display: block;
    }
    .product-name-link:hover { color: #135e96; }

    /* Row Actions - Hiện khi hover */
    .row-actions { 
        visibility: hidden; 
        font-size: 13px; 
        margin-top: 5px; 
        color: #a7aaad;
    }
    tr:hover .row-actions { 
        visibility: visible !important; 
    }

    .row-actions a, .row-actions button {
        color: var(--wp-blue);
        text-decoration: none;
    }
    .row-actions .delete-action { color: #b32d2e !important; }

    .price-sale { color: #d63638; font-weight: 700; }
    .price-old { color: #646970; text-decoration: line-through; font-size: 12px; font-weight: 400; }

    .badge-category {
        background-color: #f6f7f7;
        color: #3c434a;
        border: 1px solid #c3c4c7;
        font-weight: normal;
        padding: 5px 10px;
    }

    @media (max-width: 992px) {
        .admin-sidebar-container { display: none; }
        .admin-content { margin-left: 0; padding: 15px; }
    }
</style>
</head>
<body>

    <div class="admin-wrapper">
        <div class="admin-sidebar-container">
            <%- include('./partials/sidebar.ejs') %>
        </div>

        <div class="admin-content">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="d-flex align-items-center gap-3">
                    <h2 class="fw-bold h4 m-0 text-dark">Sản phẩm</h2>
                    <a href="/admin/add-product" class="btn btn-outline-primary btn-sm fw-bold px-3">Thêm mới</a>
                </div>
            </div>

            <div class="wp-card shadow-sm overflow-hidden">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-head-wp">
                        <tr>
                            <th class="ps-3" width="75">Ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th width="160">Giá bán</th>
                            <th width="160">Danh mục</th>
                            <th width="120">Ngày đăng</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (products && products.length > 0) { %>
                            <% products.forEach(p => { %>
                                <tr>
                                    <td class="ps-3">
                                        <% if (p.thumbnail) { %>
                                            <img src="<%= p.thumbnail %>" alt="thumb" style="width: 50px; height: 50px; object-fit: cover; border: 1px solid #dcdcde; border-radius: 2px;">
                                        <% } else { %>
                                            <div class="bg-light border d-flex align-items-center justify-content-center text-muted" style="width: 50px; height: 50px; border-radius: 2px;">
                                                <i class="fas fa-box opacity-25"></i>
                                            </div>
                                        <% } %>
                                    </td>

                                    <td>
                                        <a href="/admin/edit-product/<%= p._id %>" class="product-name-link">
                                            <%= p.name %>
                                        </a>

                                        <div class="row-actions">
                                            <a href="/admin/edit-product/<%= p._id %>">Sửa</a>
                                            <span class="mx-1">|</span>
                                            
                                            <form action="/admin/delete-product" method="POST" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa sản phẩm này?')">
                                                <input type="hidden" name="productId" value="<%= p._id %>">
                                                <button type="submit" class="btn btn-link p-0 delete-action border-0 bg-transparent" style="font-size: 13px;">Xóa</button>
                                            </form>
                                            
                                            <span class="mx-1">|</span>
                                            <a href="/products/<%= p.slug %>" target="_blank" class="text-success fw-bold">Xem</a>
                                        </div>
                                    </td>

                                    <td>
                                        <div>
                                            <% if (p.salePrice) { %>
                                                <div class="price-sale"><%= p.salePrice.toLocaleString('vi-VN') %>₫</div>
                                                <div class="price-old"><%= p.basePrice.toLocaleString('vi-VN') %>₫</div>
                                            <% } else { %>
                                                <div class="fw-bold text-dark"><%= p.basePrice.toLocaleString('vi-VN') %>₫</div>
                                            <% } %>
                                        </div>
                                    </td>

                                    <td>
                                        <span class="badge badge-category">
                                            <%= p.category ? p.category.name : 'Chưa phân loại' %>
                                        </span>
                                    </td>

                                    <td class="small text-muted">
                                        <%= p.createdAt.toLocaleDateString('vi-VN') %>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="fas fa-shopping-bag fa-3x mb-3 opacity-10"></i>
                                    <p>Chưa có sản phẩm nào. Bắt đầu đăng bán ngay!</p>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <div class="mt-3 small text-muted">
                Tổng số sản phẩm: <strong><%= products ? products.length : 0 %></strong>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>