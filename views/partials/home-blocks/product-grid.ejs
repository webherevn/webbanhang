<section class="py-5" id="product-grid-<%= data._id %>">
    <div class="container">
        <div class="d-flex justify-content-between align-items-end mb-4">
            <div>
                <h2 class="fw-bold text-uppercase"><%= data.title || 'Sản phẩm mới' %></h2>
                <div class="bg-danger mt-2" style="width: 60px; height: 3px;"></div>
            </div>
            <% if (data.buttonLink) { %>
                <a href="<%= data.buttonLink %>" class="text-decoration-none text-dark fw-bold border-bottom border-dark pb-1">
                    <%= data.buttonText || 'Xem tất cả' %> <i class="bi bi-arrow-right"></i>
                </a>
            <% } %>
        </div>

        <div class="row g-4">
            <% if (typeof products !== 'undefined' && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="col-6 col-md-3">
                        <%- include('../product-card.ejs', { product: product }) %>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-center text-muted">Chưa có sản phẩm nào để hiển thị.</p>
            <% } %>
        </div>
    </div>
</section>