<%- include('../partials/head.ejs') %>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<style>
    /* 1. ĐỒNG BỘ BIẾN HỆ THỐNG */
    :root {
        --sidebar-width: 240px;
        --admin-bg: #f0f0f1;
        --sidebar-bg: #23282d;
        --wp-blue: #2271b1;
        --base-font: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen-Sans,Ubuntu,Cantarell,"Helvetica Neue",sans-serif;
    }

    body { 
        background-color: var(--admin-bg); 
        margin: 0; padding: 0; 
        font-family: var(--base-font);
        font-size: 14px; 
        color: #3c434a;
    }

    /* 2. ĐỒNG BỘ LAYOUT */
    .admin-wrapper { display: flex; min-height: 100vh; }
    
    .admin-sidebar-container { 
        width: var(--sidebar-width); 
        position: fixed; 
        top: 0; left: 0; bottom: 0; 
        background-color: var(--sidebar-bg); 
        z-index: 1000; 
    }

    .admin-content { 
        flex: 1; 
        margin-left: var(--sidebar-width); 
        padding: 30px; 
        min-width: 0;
    }

    /* 3. ĐỒNG BỘ CARD & COMPONENT */
    .wp-card { 
        background: #fff; 
        border: 1px solid #c3c4c7; 
        box-shadow: 0 1px 1px rgba(0,0,0,.04); 
        padding: 20px; 
        margin-bottom: 20px; 
    }

    .postbox-header { 
        border-bottom: 1px solid #f0f0f1; 
        padding-bottom: 10px; 
        margin-bottom: 15px; 
        font-weight: 700; 
        color: #1d2327;
        text-transform: uppercase;
        font-size: 13px;
    }

    /* Table Styles */
    .table-head-wp { 
        background-color: #fff; 
        border-bottom: 2px solid #dcdcde; 
        color: #1d2327; 
    }
    .table-head-wp th { font-weight: 600; padding: 12px 10px; }

    .category-name { font-weight: 600; color: var(--wp-blue); text-decoration: none; font-size: 14px; }
    .category-name:hover { color: #135e96; }

    /* Row Actions - Chỉ hiện khi hover dòng */
    .row-actions { visibility: hidden; font-size: 13px; margin-top: 5px; color: #a7aaad; }
    tr:hover .row-actions { visibility: visible !important; }
    
    .img-preview-box {
        width: 100%; height: 160px; background: #f8f9fa; border: 1px dashed #c3c4c7;
        display: flex; align-items: center; justify-content: center;
        margin-bottom: 10px; overflow: hidden; border-radius: 2px;
    }
    .img-preview-box img { width: 100%; height: 100%; object-fit: contain; display: none; }

    /* Tùy chỉnh Summernote cho đồng bộ */
    .note-editor { border: 1px solid #c3c4c7 !important; border-radius: 0 !important; }

    @media (max-width: 992px) { 
        .admin-sidebar-container { display: none; } 
        .admin-content { margin-left: 0; padding: 15px; } 
    }
</style>
</head>
<body>

    <div class="admin-wrapper">
        <div class="admin-sidebar-container">
            <%- include('./partials/sidebar.ejs') %>
        </div>

        <div class="admin-content">
            <div class="container-fluid">
                <h2 class="fw-bold h4 mb-4 text-dark">Danh mục sản phẩm</h2>

                <div class="row">
                    <div class="col-md-4">
                        <div class="wp-card">
                            <div class="postbox-header">Thêm danh mục mới</div>
                            
                            <form action="/admin/categories" method="POST" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label class="form-label fw-bold small">Tên danh mục</label>
                                    <input type="text" name="name" class="form-control form-control-sm shadow-sm" style="border-radius: 2px;" placeholder="Ví dụ: Thời trang Nam" required>
                                    <div class="form-text small opacity-75 mt-2">Tên này sẽ hiển thị trên thanh menu và các trang sản phẩm.</div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold small">Mô tả</label>
                                    <textarea name="description" id="catDesc"></textarea>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label fw-bold small">Ảnh đại diện danh mục</label>
                                    <div class="img-preview-box shadow-sm" onclick="document.getElementById('catImage').click()" style="cursor: pointer;">
                                        <span class="placeholder-text text-center small text-muted">
                                            <i class="fas fa-cloud-upload-alt d-block mb-1 fa-2x opacity-50"></i> 
                                            Bấm để tải ảnh lên
                                        </span>
                                        <img id="previewImg" src="">
                                    </div>
                                    <input type="file" name="image" id="catImage" class="form-control form-control-sm d-none" accept="image/*" onchange="previewFile()">
                                    <small class="text-muted" style="font-size: 11px;">Khuyên dùng ảnh vuông để hiển thị đẹp nhất.</small>
                                </div>

                                <button type="submit" class="btn btn-primary btn-sm px-4 fw-bold w-100 shadow-sm">
                                    <i class="fas fa-plus me-1"></i> Thêm danh mục
                                </button>
                            </form>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="wp-card p-0 overflow-hidden">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-head-wp">
                                    <tr>
                                        <th scope="col" class="ps-3" width="40"><input type="checkbox" class="form-check-input"></th>
                                        <th scope="col" width="70">Ảnh</th>
                                        <th scope="col">Tên danh mục</th>
                                        <th scope="col">Mô tả</th>
                                        <th scope="col" width="150">Đường dẫn (Slug)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (categories.length > 0) { %>
                                        <% categories.forEach(cat => { %>
                                            <tr>
                                                <td class="ps-3"><input type="checkbox" class="form-check-input"></td>
                                                <td>
                                                    <% if (cat.image) { %>
                                                        <img src="<%= cat.image %>" style="width: 45px; height: 45px; object-fit: cover; border-radius: 2px; border: 1px solid #dcdcde;">
                                                    <% } else { %>
                                                        <div class="bg-light d-flex align-items-center justify-content-center border" style="width: 45px; height: 45px; border-radius: 2px;">
                                                            <i class="fas fa-image text-muted opacity-25"></i>
                                                        </div>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="/admin/edit-category/<%= cat._id %>" class="category-name"><%= cat.name %></a>
                                                    
                                                    <div class="row-actions">
                                                        <a href="/admin/edit-category/<%= cat._id %>" class="text-primary">Sửa</a>
                                                        <span class="mx-1">|</span>
                                                        <form action="/admin/delete-category" method="POST" class="d-inline" onsubmit="return confirm('Xóa danh mục này? Tất cả sản phẩm thuộc danh mục sẽ bị ảnh hưởng.');">
                                                            <input type="hidden" name="categoryId" value="<%= cat._id %>">
                                                            <button type="submit" class="btn btn-link p-0 text-danger border-0 bg-transparent" style="font-size: 13px;">Xóa</button>
                                                        </form>
                                                        <span class="mx-1">|</span>
                                                        <a href="/category/<%= cat.slug %>" target="_blank" class="text-success fw-bold">Xem</a>
                                                    </div>
                                                </td>
                                                <td class="small text-muted" style="max-width: 250px;">
                                                    <%- cat.description ? (cat.description.replace(/<[^>]*>?/gm, '').substring(0, 70)) + '...' : '—' %>
                                                </td>
                                                <td><code class="text-muted small" style="background: #f6f7f7; padding: 2px 5px;"><%= cat.slug %></code></td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center py-5 text-muted">
                                                <i class="fas fa-folder-open fa-3x mb-3 opacity-10"></i>
                                                <p>Chưa có danh mục nào. Hãy bắt đầu tạo một danh mục để phân loại sản phẩm.</p>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-3 small text-muted">
                            Tổng số danh mục: <strong><%= categories.length %></strong>
                        </div>
                    </div> 
                </div> 
            </div> 
        </div> 
    </div>

    <script>
        $(document).ready(function() {
            $('#catDesc').summernote({
                placeholder: 'Mô tả ngắn gọn về danh mục sản phẩm này...',
                tabsize: 2,
                height: 150,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['insert', ['link', 'hr']],
                    ['view', ['codeview']]
                ]
            });
        });

        function previewFile() {
            const preview = document.getElementById('previewImg');
            const file = document.getElementById('catImage').files[0];
            const placeholder = document.querySelector('.placeholder-text');

            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                    placeholder.style.display = 'none';
                }
                reader.readAsDataURL(file);
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>