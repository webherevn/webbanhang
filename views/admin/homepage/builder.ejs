<%- include('../../partials/head.ejs') %>

<style>
    :root {
        --wp-blue: #2271b1;
        --bg-admin: #f0f2f5;
        --card-border: #dcdcde;
        --text-dark: #1d2327;
        --success-green: #00a32a;
    }

    body { background-color: var(--bg-admin); font-family: 'Inter', -apple-system, sans-serif; color: var(--text-dark); }
    
    /* Layout */
    .admin-wrapper { display: flex; min-height: 100vh; }
    .admin-sidebar-container { width: 260px; position: fixed; height: 100vh; z-index: 1000; box-shadow: 2px 0 5px rgba(0,0,0,0.05); }
    .admin-content { flex: 1; padding: 40px; margin-left: 260px; }

    /* Builder UI - Canvas */
    #builder-canvas { max-width: 1000px; margin: 0 auto; }
    
    .section-item { 
        background: #fff; 
        border: 1px solid var(--card-border); 
        border-radius: 12px;
        margin-bottom: 15px; 
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex; 
        align-items: center; 
        justify-content: space-between;
        position: relative;
    }

    .section-item:hover { 
        border-color: var(--wp-blue); 
        box-shadow: 0 8px 25px rgba(0,0,0,0.08);
        transform: translateY(-2px);
    }

    /* Sortable Placeholder (Vị trí khối sẽ rơi vào khi kéo) */
    .sortable-ghost { opacity: 0.3; border: 2px dashed var(--wp-blue); background: #f0f7ff; }

    .drag-handle { 
        padding: 28px 20px; 
        color: #ccd0d4; 
        border-right: 1px solid #f0f0f1; 
        cursor: grab; 
        transition: 0.2s;
        background: #fafafa;
        border-radius: 12px 0 0 12px;
    }
    .section-item:hover .drag-handle { color: var(--wp-blue); background: #f0f7ff; }

    .section-info { padding-left: 25px; flex-grow: 1; }
    
    .section-type-badge { 
        font-size: 10px; font-weight: 800; letter-spacing: 0.8px;
        padding: 3px 10px; border-radius: 5px; 
        background: #f0f0f1; color: #50575e;
        text-transform: uppercase;
        display: inline-block;
        margin-bottom: 5px;
    }

    /* Status Indicator */
    .status-indicator { font-size: 11px; font-weight: 600; display: flex; align-items: center; gap: 5px; }
    .dot { width: 8px; height: 8px; border-radius: 50%; display: inline-block; }
    .dot-active { background: var(--success-green); box-shadow: 0 0 5px var(--success-green); }

    /* Library Modal */
    .block-card {
        border: 2px solid #f0f0f1; border-radius: 20px; padding: 35px 20px;
        transition: all 0.3s; text-align: center; cursor: pointer; height: 100%;
        background: #fff;
    }
    .block-card:hover { 
        border-color: var(--wp-blue); 
        background: #faffff; 
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.05);
    }
    .block-icon { font-size: 2.8rem; margin-bottom: 15px; display: block; color: var(--wp-blue); }
</style>

<div class="admin-wrapper">
    <div class="admin-sidebar-container">
        <%- include('../partials/sidebar.ejs') %>
    </div>

    <div class="admin-content">
        <div class="d-flex justify-content-between align-items-end mb-5">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-1">
                        <li class="breadcrumb-item small"><a href="/admin" class="text-decoration-none">Bảng tin</a></li>
                        <li class="breadcrumb-item small active">Homepage Builder</li>
                    </ol>
                </nav>
                <h2 class="fw-bold text-dark m-0">Trình thiết kế Trang chủ</h2>
                <p class="text-muted small m-0">Kéo thả các khối để sắp xếp thứ tự hiển thị.</p>
            </div>
            <div class="d-flex gap-3">
                <a href="/" target="_blank" class="btn btn-outline-dark rounded-pill px-4 fw-bold shadow-sm">
                    <i class="fas fa-external-link-alt me-2"></i>Xem Web
                </a>
                <button class="btn btn-primary rounded-pill px-4 shadow fw-bold" data-bs-toggle="modal" data-bs-target="#addSectionModal">
                    <i class="fas fa-plus-circle me-2"></i>Thêm khối mới
                </button>
            </div>
        </div>

        <div id="builder-canvas">
            <% if (sections && sections.length > 0) { %>
                <div id="sortable-list">
                    <% sections.forEach((section) => { %>
                        <div class="section-item" data-id="<%= section._id %>">
                            <div class="d-flex align-items-center flex-grow-1">
                                <div class="drag-handle"><i class="fas fa-grip-vertical"></i></div>
                                <div class="section-info">
                                    <div class="d-flex align-items-center gap-3">
                                        <span class="section-type-badge"><%= section.type %></span>
                                        <% if(section.isActive) { %>
                                            <span class="status-indicator text-success">
                                                <span class="dot dot-active"></span> HIỂN THỊ
                                            </span>
                                        <% } %>
                                    </div>
                                    <h6 class="fw-bold m-0 text-dark"><%= section.data.title || 'Khối này chưa có tiêu đề' %></h6>
                                </div>
                            </div>
                            
                            <div class="pe-4 d-flex gap-2">
                                <a href="/admin/homepage/edit-section/<%= section._id %>" class="btn btn-sm btn-light border rounded-pill px-3 shadow-sm fw-bold">
                                    <i class="fas fa-cog me-1 text-primary"></i> Tùy chỉnh
                                </a>
                                
                                <form action="/admin/homepage/delete-section" method="POST" onsubmit="return confirm('Bạn có chắc chắn muốn xóa khối này không?')">
                                    <input type="hidden" name="sectionId" value="<%= section._id %>">
                                    <button class="btn btn-sm btn-outline-danger border-0 rounded-circle p-2">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="text-center py-5 border-2 border-dashed rounded-4 bg-white shadow-sm">
                    <div class="mb-3 text-muted opacity-25">
                        <i class="fas fa-layer-group fa-4x"></i>
                    </div>
                    <h5 class="fw-bold">Giao diện của bạn đang trống</h5>
                    <p class="text-muted">Hãy bắt đầu bằng cách thêm khối nội dung đầu tiên từ thư viện.</p>
                    <button class="btn btn-primary rounded-pill mt-2" data-bs-toggle="modal" data-bs-target="#addSectionModal">Bắt đầu ngay</button>
                </div>
            <% } %>
        </div>
    </div>
</div>

<div class="modal fade" id="addSectionModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header border-0 p-4 pb-0">
                <h4 class="fw-bold">Thư viện khối nội dung</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <div class="row g-4">
                    <div class="col-md-4">
                        <a href="/admin/homepage/add-section/hero" class="text-decoration-none d-block h-100">
                            <div class="block-card">
                                <span class="block-icon"><i class="fas fa-images"></i></span>
                                <h6 class="fw-bold text-dark mb-2">Main Signature Hero</h6>
                                <p class="text-muted small mb-0">Banner rộng kèm tiêu đề và nút bấm chuyển đổi cao.</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/admin/homepage/add-section/product-grid" class="text-decoration-none d-block h-100">
                            <div class="block-card">
                                <span class="block-icon text-success"><i class="fas fa-th"></i></span>
                                <h6 class="fw-bold text-dark mb-2">Product Showcase</h6>
                                <p class="text-muted small mb-0">Hiển thị danh sách sản phẩm theo danh mục bạn chọn.</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/admin/homepage/add-section/features" class="text-decoration-none d-block h-100">
                            <div class="block-card">
                                <span class="block-icon text-warning"><i class="fas fa-shield-alt"></i></span>
                                <h6 class="fw-bold text-dark mb-2">Brand Trust Cards</h6>
                                <p class="text-muted small mb-0">Tăng độ tin cậy với các cam kết dịch vụ & bảo hành.</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
<script>
    const el = document.getElementById('sortable-list');
    if (el) {
        Sortable.create(el, {
            handle: '.drag-handle', // Chỉ được kéo ở tay nắm
            animation: 150,
            ghostClass: 'sortable-ghost',
            onEnd: function() {
                // Lấy mảng ID theo thứ tự mới
                const sectionIds = Array.from(el.querySelectorAll('.section-item')).map(item => item.dataset.id);
                
                // Gửi AJAX cập nhật lên Server
                fetch('/admin/homepage/update-order', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ order: sectionIds })
                })
                .then(res => res.json())
                .then(data => {
                    if(data.success) {
                        // Hiện thông báo nhẹ (toast) nếu cần
                        console.log('Đã cập nhật thứ tự');
                    }
                });
            }
        });
    }
</script>