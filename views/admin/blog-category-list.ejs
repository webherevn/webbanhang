<%- include('../partials/head.ejs') %>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<style>
    /* 1. ĐỒNG BỘ BIẾN HỆ THỐNG */
    :root {
        --sidebar-width: 240px;
        --admin-bg: #f0f0f1;
        --sidebar-bg: #23282d;
        --wp-blue: #2271b1;
        --base-font: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen-Sans,Ubuntu,Cantarell,"Helvetica Neue",sans-serif;
    }

    body { 
        background-color: var(--admin-bg); 
        margin: 0; padding: 0; 
        font-family: var(--base-font);
        font-size: 14px; 
        color: #3c434a;
    }

    /* 2. ĐỒNG BỘ LAYOUT */
    .admin-wrapper { display: flex; min-height: 100vh; }
    
    .admin-sidebar-container { 
        width: var(--sidebar-width); 
        position: fixed; 
        top: 0; left: 0; bottom: 0; 
        background-color: var(--sidebar-bg); 
        z-index: 1000; 
    }

    .admin-content { 
        flex: 1; 
        margin-left: var(--sidebar-width); 
        padding: 30px; 
        min-width: 0;
    }

    /* 3. ĐỒNG BỘ CARD & COMPONENT */
    .wp-card { 
        background: #fff; 
        border: 1px solid #c3c4c7; 
        box-shadow: 0 1px 1px rgba(0,0,0,.04); 
        padding: 20px; 
        margin-bottom: 20px; 
    }

    .postbox-header { 
        border-bottom: 1px solid #f0f0f1; 
        padding-bottom: 10px; 
        margin-bottom: 15px; 
        font-weight: 700; 
        color: #1d2327;
        text-transform: uppercase;
        font-size: 13px;
    }

    /* Table Styles */
    .table-head-wp { 
        background-color: #fff; 
        border-bottom: 2px solid #dcdcde; 
        color: #1d2327; 
    }
    .table-head-wp th { font-weight: 600; padding: 12px 10px; }

    /* Row Actions - Chỉ hiện khi hover dòng */
    .row-actions { visibility: hidden; font-size: 13px; margin-top: 5px; color: #a7aaad; }
    tr:hover .row-actions { visibility: visible !important; }
    
    .cat-name-link { font-weight: 600; color: var(--wp-blue); text-decoration: none; font-size: 14px; }
    .cat-name-link:hover { color: #135e96; }

    /* Image Preview Box */
    .img-preview { 
        width: 100%; height: 140px; background: #f8f9fa; border: 1px dashed #c3c4c7; 
        display: flex; align-items: center; justify-content: center; 
        overflow: hidden; cursor: pointer; border-radius: 2px; 
    }
    .img-preview img { width: 100%; height: 100%; object-fit: contain; display: none; }

    /* Tùy chỉnh Summernote */
    .note-editor { border: 1px solid #c3c4c7 !important; border-radius: 0 !important; }

    @media (max-width: 992px) { 
        .admin-sidebar-container { display: none; } 
        .admin-content { margin-left: 0; padding: 15px; } 
    }
</style>
</head>
<body>
    <div class="admin-wrapper">
        <div class="admin-sidebar-container">
            <%- include('./partials/sidebar.ejs') %>
        </div>

        <div class="admin-content">
            <div class="container-fluid">
                <h2 class="fw-bold h4 mb-4 text-dark">Chuyên mục bài viết</h2>
                
                <div class="row">
                    <div class="col-md-4">
                        <div class="wp-card">
                            <h6 class="postbox-header">Thêm chuyên mục mới</h6>
                            <form action="/admin/add-blog-category" method="POST" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label class="form-label small fw-bold">Tên chuyên mục</label>
                                    <input type="text" name="name" class="form-control form-control-sm" required placeholder="Ví dụ: Đời sống & Xu hướng" style="border-radius: 2px;">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label small fw-bold">Mô tả</label>
                                    <textarea name="description" id="blogCatDesc"></textarea>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label small fw-bold">Ảnh đại diện</label>
                                    <div class="img-preview mb-2" onclick="document.getElementById('fileInput').click()">
                                        <span id="placeholder" class="text-muted small text-center">
                                            <i class="fas fa-cloud-upload-alt d-block mb-1 fa-2x opacity-50"></i>
                                            Bấm để chọn ảnh
                                        </span>
                                        <img id="previewImg" src="">
                                    </div>
                                    <input type="file" name="image" id="fileInput" class="d-none" onchange="preview(this)" accept="image/*">
                                    <small class="text-muted d-block" style="font-size: 11px;">Ảnh minh họa cho chuyên mục (tùy chọn).</small>
                                </div>

                                <button type="submit" class="btn btn-primary btn-sm w-100 fw-bold shadow-sm">
                                    <i class="fas fa-plus me-1"></i> Thêm chuyên mục
                                </button>
                            </form>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="wp-card p-0 shadow-sm overflow-hidden">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-head-wp">
                                    <tr>
                                        <th class="ps-3" width="70">Ảnh</th>
                                        <th>Tên chuyên mục</th>
                                        <th>Mô tả</th>
                                        <th width="150">Đường dẫn (Slug)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (categories && categories.length > 0) { %>
                                        <% categories.forEach(cat => { %>
                                            <tr>
                                                <td class="ps-3">
                                                    <% if (cat.image) { %>
                                                        <img src="<%= cat.image %>" style="width: 40px; height: 40px; object-fit: cover; border: 1px solid #dcdcde; border-radius: 2px;">
                                                    <% } else { %>
                                                        <div class="bg-light d-flex align-items-center justify-content-center border" style="width: 40px; height: 40px; border-radius: 2px;">
                                                            <i class="fas fa-image text-muted opacity-25"></i>
                                                        </div>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="/admin/edit-blog-category/<%= cat._id %>" class="cat-name-link"><%= cat.name %></a>
                                                    <div class="row-actions">
                                                        <a href="/admin/edit-blog-category/<%= cat._id %>" class="text-primary">Sửa</a>
                                                        <span class="mx-1 text-muted opacity-50">|</span>
                                                        <form action="/admin/delete-blog-category" method="POST" class="d-inline" onsubmit="return confirm('Xóa chuyên mục này?')">
                                                            <input type="hidden" name="categoryId" value="<%= cat._id %>">
                                                            <button class="btn btn-link p-0 text-danger border-0 bg-transparent" style="font-size: 13px;">Xóa</button>
                                                        </form>
                                                        <span class="mx-1 text-muted opacity-50">|</span>
                                                        <a href="/blog/<%= cat.slug %>" target="_blank" class="text-success fw-bold">Xem</a>
                                                    </div>
                                                </td>
                                                <td class="small text-muted" style="max-width: 250px;">
                                                    <%- cat.description ? (cat.description.replace(/<[^>]*>?/gm, '').substring(0, 65) + '...') : '—' %>
                                                </td>
                                                <td>
                                                    <code class="text-muted small" style="background: #f6f7f7; padding: 2px 5px;"><%= cat.slug %></code>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="4" class="text-center py-5 text-muted">
                                                <i class="fas fa-folder-open fa-3x mb-3 opacity-10"></i>
                                                <p>Chưa có chuyên mục bài viết nào.</p>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-3 small text-muted">
                            Tổng số chuyên mục: <strong><%= categories ? categories.length : 0 %></strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            $('#blogCatDesc').summernote({
                placeholder: 'Nhập mô tả ngắn cho chuyên mục...',
                tabsize: 2,
                height: 150,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['insert', ['link', 'hr']],
                    ['view', ['codeview']]
                ]
            });
        });

        function preview(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var previewImg = document.getElementById('previewImg');
                    var placeholder = document.getElementById('placeholder');
                    previewImg.src = e.target.result;
                    previewImg.style.display = 'block';
                    placeholder.style.display = 'none';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>