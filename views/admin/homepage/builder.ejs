<%- include('../../partials/head.ejs') %>

<style>
    :root { --admin-blue: #2271b1; --admin-bg: #f0f2f5; --text-dark: #1d2327; }
    body { background-color: var(--admin-bg); font-family: 'Inter', -apple-system, system-ui, sans-serif; }
    
    /* Layout */
    .admin-wrapper { display: flex; min-height: 100vh; }
    .admin-sidebar-container { width: 260px; position: fixed; height: 100vh; z-index: 1000; }
    .admin-content { flex: 1; padding: 40px; margin-left: 260px; }

    /* Builder UI */
    .section-item { 
        background: #fff; border: 1px solid #dcdcde; border-radius: 12px;
        margin-bottom: 16px; transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex; align-items: center; justify-content: space-between;
    }
    .section-item:hover { 
        border-color: var(--admin-blue); 
        box-shadow: 0 10px 20px rgba(0,0,0,0.05);
        transform: translateY(-2px);
    }
    
    .drag-handle { padding: 25px; color: #ccd0d4; border-right: 1px solid #f0f0f1; cursor: grab; }
    .section-info { padding-left: 24px; }
    .section-type-badge { 
        font-size: 10px; font-weight: 700; letter-spacing: 0.5px;
        padding: 4px 12px; border-radius: 6px; background: #f0f0f1; color: #50575e;
    }
    
    /* Library Cards */
    .block-card {
        border: 2px solid #f0f0f1; border-radius: 16px; padding: 24px;
        transition: 0.3s; text-align: center; cursor: pointer; height: 100%;
    }
    .block-card:hover { border-color: var(--admin-blue); background: #faffff; }
    .block-icon { font-size: 2.5rem; margin-bottom: 15px; display: block; }
</style>

<div class="admin-wrapper">
    <div class="admin-sidebar-container">
        <%- include('../partials/sidebar.ejs') %>
    </div>

    <div class="admin-content">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-1">
                        <li class="breadcrumb-item small"><a href="/admin">Bảng tin</a></li>
                        <li class="breadcrumb-item small active">Giao diện</li>
                    </ol>
                </nav>
                <h2 class="fw-bold text-dark m-0">Trình thiết kế Trang chủ</h2>
            </div>
            <div class="d-flex gap-3">
                <a href="/" target="_blank" class="btn btn-outline-dark rounded-pill px-4 fw-bold">
                    <i class="fas fa-external-link-alt me-2"></i>Xem Web
                </a>
                <button class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold" data-bs-toggle="modal" data-bs-target="#addSectionModal">
                    <i class="fas fa-plus me-2"></i>Thêm khối mới
                </button>
            </div>
        </div>

        <div id="builder-canvas">
            <% if (sections && sections.length > 0) { %>
                <% sections.forEach((section, index) => { %>
                    <div class="section-item" data-id="<%= section._id %>">
                        <div class="d-flex align-items-center">
                            <div class="drag-handle"><i class="fas fa-grip-lines"></i></div>
                            <div class="section-info">
                                <div class="d-flex align-items-center gap-2 mb-1">
                                    <span class="section-type-badge"><%= section.type.toUpperCase() %></span>
                                    <% if(section.isActive) { %>
                                        <span class="badge bg-success-subtle text-success border-success-subtle" style="font-size: 9px;">ACTIVE</span>
                                    <% } %>
                                </div>
                                <h6 class="fw-bold m-0"><%= section.data.title || 'Mô tả ngắn cho khối này...' %></h6>
                            </div>
                        </div>
                        <div class="pe-4 d-flex gap-2">
                            <a href="/admin/homepage/edit-section/<%= section._id %>" class="btn ...">Tùy chỉnh</a>
                            <form action="/admin/homepage/delete-section" method="POST" onsubmit="return confirm('Xóa khối này sẽ không thể khôi phục. Tiếp tục?')">
                                <input type="hidden" name="sectionId" value="<%= section._id %>">
                                <button class="btn btn-sm btn-outline-danger border-0"><i class="fas fa-trash-alt"></i></button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="text-center py-5 border-2 border-dashed rounded-4 bg-white opacity-75">
                    <i class="fas fa-layer-group fa-3x text-muted mb-3"></i>
                    <h5 class="fw-bold">Bắt đầu xây dựng trang chủ</h5>
                    <p class="text-muted">Chưa có khối nội dung nào. Hãy chọn "Thêm khối mới" để bắt đầu.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<div class="modal fade" id="addSectionModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 24px;">
            <div class="modal-header border-0 p-4 pb-0">
                <h4 class="fw-bold">Thư viện khối chuyên nghiệp</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <div class="row g-4">
                    <div class="col-md-4">
                        <a href="/admin/homepage/add-section/hero" class="text-decoration-none d-block h-100">
                            <div class="block-card">
                                <span class="block-icon text-primary"><i class="fas fa-window-maximize"></i></span>
                                <h6 class="fw-bold text-dark">Main Signature Hero</h6>
                                <p class="text-muted small">Banner lớn, video nền và nút kêu gọi hành động.</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/admin/homepage/add-section/product-grid" class="text-decoration-none d-block h-100">
                            <div class="block-card border-success-subtle">
                                <span class="block-icon text-success"><i class="fas fa-shopping-bag"></i></span>
                                <h6 class="fw-bold text-dark">Product Showcase</h6>
                                <p class="text-muted small">Lưới sản phẩm thông minh theo danh mục.</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/admin/homepage/add-section/features" class="text-decoration-none d-block h-100">
                            <div class="block-card border-warning-subtle">
                                <span class="block-icon text-warning"><i class="fas fa-certificate"></i></span>
                                <h6 class="fw-bold text-dark">Brand Trust Cards</h6>
                                <p class="text-muted small">Cam kết dịch vụ, miễn phí vận chuyển, đổi trả.</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>