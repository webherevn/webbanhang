<%- include('../partials/head.ejs') %>
<style>
    .transition-img { transition: transform 0.5s ease; }
    .card:hover .transition-img { transform: scale(1.1); }
    .category-badge { position: absolute; top: 15px; left: 15px; z-index: 10; }
    .blog-header { background: #f8f9fa; border-bottom: 1px solid #eee; padding: 60px 0; }
    .category-desc { max-width: 800px; margin: 0 auto; line-height: 1.6; }
</style>
</head>
<body>
  <%- include('../partials/shop-header.ejs') %>

    <div class="container py-5">
        <h2 class="mb-4 fw-bold">Giỏ Hàng Của Bạn</h2>

        <% if (cart.items.length > 0) { %>
            <div class="row">
                <div class="col-lg-8">
                    <div class="table-responsive">
                        <table class="table align-middle border">
                            <thead class="table-light">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Tổng</th>
                                    <th>Xóa</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% cart.items.forEach(item => { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="<%= item.image %>" alt="<%= item.name %>" 
                                                     style="width: 70px; height: 70px; object-fit: cover; border-radius: 4px;" class="me-3 border">
                                                <div>
                                                    <a href="/products/<%= item.slug %>" class="text-decoration-none text-dark fw-bold d-block">
                                                        <%= item.name %>
                                                    </a>
                                                    <small class="text-muted badge bg-light text-dark border"><%= item.variant %></small>
                                                </div>
                                            </div>
                                        </td>
                                        <td><%= item.price.toLocaleString('vi-VN') %>₫</td>
                                        <td>
                                            <span class="fw-bold"><%= item.quantity %></span>
                                        </td>
                                        <td class="fw-bold text-danger"><%= item.total.toLocaleString('vi-VN') %>₫</td>
                                        <td>
                                            <form action="/cart/delete" method="POST">
                                                <input type="hidden" name="productId" value="<%= item.productId %>">
                                                <input type="hidden" name="variant" value="<%= item.variant %>">
                                                <button type="submit" class="btn btn-link text-danger p-0" title="Xóa">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm bg-light">
                        <div class="card-body p-4">
                            <h5 class="fw-bold mb-4">Cộng giỏ hàng</h5>
                            <div class="d-flex justify-content-between mb-3">
                                <span>Tạm tính:</span>
                                <span><%= cart.totalPrice.toLocaleString('vi-VN') %>₫</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-4">
                                <span class="fw-bold fs-5">Tổng tiền:</span>
                                <span class="fw-bold fs-4 text-danger"><%= cart.totalPrice.toLocaleString('vi-VN') %>₫</span>
                            </div>
                            <a href="/checkout" class="btn btn-dark w-100 py-3 fw-bold text-uppercase shadow">
                                TIẾN HÀNH ĐẶT HÀNG
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="text-center py-5 bg-light rounded">
                <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
                <h3>Giỏ hàng của bạn đang trống</h3>
                <p class="text-muted mb-4">Hãy dạo một vòng và chọn những món đồ ưng ý nhé!</p>
                <a href="/" class="btn btn-primary px-4 py-2">Tiếp tục mua sắm</a>
            </div>
        <% } %>
    </div>

    <%- include('../partials/footer.ejs') %>
</body>
</html>