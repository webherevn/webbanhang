<%- include('../partials/head.ejs') %>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<style>
    /* Chỉnh cho khung soạn thảo chuyên nghiệp hơn */
    .note-editor { background-color: #fff; border: 1px solid #ccd0d4 !important; }
    .note-editable { min-height: 400px; font-family: sans-serif; }
</style>

<script>
    $(document).ready(function() {
        $('#content-editor').summernote({
            placeholder: 'Nhập nội dung bài viết chi tiết tại đây...',
            tabsize: 2,
            height: 500,
            lang: 'vi-VN', // Nếu bạn muốn dùng tiếng Việt
            toolbar: [
                // Các nhóm tính năng hiện lên thanh công cụ
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear', 'italic', 'strikethrough', 'superscript', 'subscript']],
                ['fontname', ['fontname']],
                ['fontsize', ['fontsize']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video', 'hr']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ],
            fontSizes: ['8', '9', '10', '11', '12', '14', '18', '24', '36', '48' , '64', '82', '150']
        });
    });
</script>
<style>
    body { background-color: #f0f0f1; margin: 0; }
    .admin-wrapper { display: flex; min-height: 100vh; }
    .admin-sidebar-container { width: 240px; position: fixed; top: 0; left: 0; bottom: 0; background-color: #23282d; z-index: 1000; }
    .admin-content { flex: 1; margin-left: 240px; padding: 30px; }
    .wp-card { background: #fff; border: 1px solid #c3c4c7; box-shadow: 0 1px 1px rgba(0,0,0,.04); padding: 20px; }
    .row-actions { visibility: hidden; font-size: 13px; margin-top: 4px; }
    tr:hover .row-actions { visibility: visible !important; }
    .img-preview { width: 100%; height: 120px; background: #f0f0f1; border: 1px dashed #c3c4c7; display: flex; align-items: center; justify-content: center; overflow: hidden; cursor: pointer; }
    .img-preview img { width: 100%; height: 100%; object-fit: cover; display: none; }
</style>
</head>
<body>
    <div class="admin-wrapper">
        <div class="admin-sidebar-container"><%- include('./partials/sidebar.ejs') %></div>

        <div class="admin-content">
            <h2 class="fw-bold h4 mb-4 border-bottom pb-3">Chuyên mục bài viết</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="wp-card shadow-sm">
                        <h6 class="fw-bold mb-3 text-uppercase small">Thêm chuyên mục mới</h6>
                        <form action="/admin/add-blog-category" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label class="form-label small fw-bold">Tên</label>
                                <input type="text" name="name" class="form-control form-control-sm" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label small fw-bold">Mô tả</label>
                                <textarea name="description" id="blogCatDesc"></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label small fw-bold">Ảnh đại diện</label>
                                <div class="img-preview mb-2" onclick="document.getElementById('fileInput').click()">
                                    <span id="placeholder"><i class="fas fa-image me-1"></i> Chọn ảnh</span>
                                    <img id="previewImg" src="">
                                </div>
                                <input type="file" name="image" id="fileInput" class="d-none" onchange="preview(this)">
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm w-100 fw-bold">Thêm chuyên mục</button>
                        </form>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="wp-card p-0 shadow-sm overflow-hidden">
                        <table class="table table-hover align-middle mb-0 text-dark">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-3" width="60">Ảnh</th>
                                    <th>Tên</th>
                                    <th>Mô tả</th>
                                    <th>Slug</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% categories.forEach(cat => { %>
                                    <tr>
                                        <td class="ps-3">
                                            <img src="<%= cat.image || 'https://via.placeholder.com/40' %>" style="width: 40px; height: 40px; object-fit: cover; border: 1px solid #ddd;">
                                        </td>
                                        <td>
                                            <a href="/admin/edit-blog-category/<%= cat._id %>" class="fw-bold text-decoration-none text-primary"><%= cat.name %></a>
                                            <div class="row-actions">
                                                <a href="/admin/edit-blog-category/<%= cat._id %>" class="text-primary">Sửa</a> | 
                                                <form action="/admin/delete-blog-category" method="POST" class="d-inline" onsubmit="return confirm('Xóa?')">
                                                    <input type="hidden" name="categoryId" value="<%= cat._id %>">
                                                    <button class="btn btn-link p-0 text-danger border-0 bg-transparent small">Xóa</button>
                                                </form> | 
                                               <a href="/blog/<%= cat.slug %>" target="_blank" class="text-success text-decoration-none">Xem</a>
                                            </div>
                                        </td>
                                        <td class="small text-muted"><%- cat.description ? cat.description.substring(0, 50) + '...' : '—' %></td>
                                        <td class="small text-muted"><%= cat.slug %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        CKEDITOR.replace('blogCatDesc', { height: 120, toolbar: [ ['Bold', 'Italic', 'Underline', '-', 'NumberedList', 'BulletedList', '-', 'Link'] ] });
        function preview(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('previewImg').src = e.target.result;
                    document.getElementById('previewImg').style.display = 'block';
                    document.getElementById('placeholder').style.display = 'none';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
</body>
</html>