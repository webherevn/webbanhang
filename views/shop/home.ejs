<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>

<style>
    /* üíé HERO PREMIUM CSS */
    .hero-premium {
        position: relative;
        height: 85vh;
        min-height: 550px;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        display: flex;
        align-items: center;
        overflow: hidden;
    }

    .hero-overlay {
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
        background: linear-gradient(75deg, rgba(15, 23, 42, 0.85) 0%, rgba(15, 23, 42, 0.3) 60%, transparent 100%);
        z-index: 1;
    }

    .hero-wrapper { position: relative; z-index: 2; max-width: 750px; }

    .hero-tag {
        color: #818cf8;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 4px;
        font-size: 0.75rem;
        margin-bottom: 20px;
        display: block;
    }

    .hero-title {
        color: #ffffff;
        font-size: clamp(2.5rem, 5vw, 4.5rem);
        font-weight: 900;
        line-height: 1.1;
        margin-bottom: 20px;
        letter-spacing: -2px;
    }

    .hero-subtitle {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1.2rem;
        line-height: 1.6;
        margin-bottom: 40px;
        font-weight: 400;
        max-width: 550px;
    }

    .btn-hero-pro {
        padding: 18px 45px;
        border-radius: 50px;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 12px;
        background: #ffffff;
        color: #0f172a;
        transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }

    .btn-hero-pro:hover {
        background: #6366f1;
        color: #fff;
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(99, 102, 241, 0.4);
    }
     .pro-card:hover .quick-add { opacity: 1; transform: translateY(0); transition: 0.3s; }

    /* PRODUCT GRID STYLING */
    .section-heading { margin-bottom: 50px; }
    .section-subtitle { color: #64748b; font-size: 0.9rem; text-transform: uppercase; letter-spacing: 2px; font-weight: 700; }
    
    .scroll-down {
        position: absolute; bottom: 30px; left: 50%; transform: translateX(-50%);
        z-index: 2; color: #fff; text-align: center; font-size: 0.7rem; opacity: 0.6;
    }
    .mouse-icon {
        width: 22px; height: 35px; border: 2px solid #fff; border-radius: 20px;
        margin: 0 auto 10px; position: relative;
    }
    .mouse-wheel {
        width: 3px; height: 6px; background: #fff; position: absolute;
        left: 50%; transform: translateX(-50%); top: 6px; border-radius: 2px;
        animation: wheel-move 2s infinite;
    }
    @keyframes wheel-move { 0% { top: 6px; opacity: 1; } 100% { top: 20px; opacity: 0; } }
</style>

