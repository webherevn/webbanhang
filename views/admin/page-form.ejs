<%- include('../partials/head.ejs') %>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<div class="admin-wrapper">
    <div class="admin-sidebar-container"><%- include('./partials/sidebar.ejs') %></div>
    <div class="admin-content">
        <form action="/admin/add-page" method="POST">
            <div class="row">
                <div class="col-md-9">
                    <input type="text" name="title" class="form-control form-control-lg mb-4" placeholder="Nhập tiêu đề trang..." required>
                    <textarea name="content" id="page-editor"></textarea>
                </div>
                <div class="col-md-3">
                    <div class="wp-card p-3">
                        <button type="submit" class="btn btn-primary w-100 fw-bold">Đăng trang</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    $('#page-editor').summernote({ height: 600, placeholder: 'Thiết kế nội dung trang của bạn tại đây...' });
</script>