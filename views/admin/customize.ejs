<div class="row">
    <div class="col-md-8">
        <form action="/admin/customize" method="POST" enctype="multipart/form-data">
            <div class="wp-card shadow-sm border-top border-4 border-primary">
                <h6 class="fw-bold text-uppercase mb-3">Top Bar & Logo</h6>
                <div class="mb-3">
                    <label class="small fw-bold">Logo Website</label>
                    <input type="file" name="logo" class="form-control">
                    <% if(theme.logo) { %> <img src="<%= theme.logo %>" width="100" class="mt-2"> <% } %>
                </div>
                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" name="topBarShow" <%= theme.topBarShow ? 'checked' : '' %>>
                    <label class="form-check-label small">Hiển thị Top Bar</label>
                </div>
                <div class="mb-3">
                    <label class="small fw-bold">Nội dung Top Bar</label>
                    <input type="text" name="topBarText" class="form-control" value="<%= theme.topBarText %>">
                </div>
            </div>

            <div class="wp-card shadow-sm border-top border-4 border-info">
                <h6 class="fw-bold text-uppercase mb-3">Header Bottom (HTML)</h6>
                <textarea name="headerBottomHtml" class="form-control" rows="5" placeholder="Chèn mã quảng cáo hoặc menu phụ..."><%= theme.headerBottomHtml %></textarea>
                <small class="text-muted">Mã này sẽ hiển thị ngay dưới Menu chính.</small>
            </div>

            <button type="submit" class="btn btn-primary fw-bold">Lưu thay đổi giao diện</button>
        </form>
    </div>
</div>