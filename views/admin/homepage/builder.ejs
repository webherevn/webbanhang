<%- include('../../partials/head.ejs') %>
<div class="admin-wrapper">
    <div class="admin-sidebar-container"><%- include('../partials/sidebar.ejs') %></div>
    
    <div class="admin-content">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold h4 mb-0 text-dark"><i class="fas fa-layer-group me-2"></i>Thiết kế Trang chủ</h2>
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle fw-bold shadow-sm" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-plus me-1"></i> Thêm khối mới
                    </button>
                    <ul class="dropdown-menu shadow border-0">
                        <li><a class="dropdown-item" href="/admin/homepage/add-section/hero"><i class="fas fa-image me-2"></i> Khối Hero (Banner)</a></li>
                        <li><a class="dropdown-item" href="/admin/homepage/add-section/features"><i class="fas fa-th-large me-2"></i> Khối Dịch vụ (Features)</a></li>
                        <li><a class="dropdown-item" href="/admin/homepage/add-section/product-grid"><i class="fas fa-shopping-bag me-2"></i> Khối Sản phẩm</a></li>
                        <li><a class="dropdown-item" href="/admin/homepage/add-section/promo"><i class="fas fa-tag me-2"></i> Khối Khuyến mãi</a></li>
                    </ul>
                </div>
            </div>

            <div class="wp-card shadow-sm p-0">
                <div class="p-3 border-bottom bg-light small fw-bold text-muted text-uppercase">
                    Cấu trúc các khối (Kéo thả để sắp xếp)
                </div>
                <ul id="section-list" class="list-group list-group-flush">
                    <% sections.forEach(section => { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center py-3" data-id="<%= section._id %>">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-grip-vertical me-3 text-muted handle" style="cursor: move;"></i>
                                <div>
                                    <span class="badge bg-secondary mb-1"><%= section.type.toUpperCase() %></span>
                                    <h6 class="mb-0 fw-bold"><%= section.data.title || 'Khối không tiêu đề' %></h6>
                                </div>
                            </div>
                            <div class="btn-group">
                                <a href="/admin/homepage/edit-section/<%= section._id %>" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit me-1"></i> Sửa
                                </a>
                                <form action="/admin/homepage/delete-section" method="POST" onsubmit="return confirm('Xóa khối này?')">
                                    <input type="hidden" name="sectionId" value="<%= section._id %>">
                                    <button class="btn btn-sm btn-outline-danger ms-1"><i class="fas fa-trash"></i></button>
                                </form>
                            </div>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.14.0/Sortable.min.js"></script>
<script>
    var el = document.getElementById('section-list');
    Sortable.create(el, {
        handle: '.handle',
        animation: 150,
        onEnd: function () {
            let orders = [];
            document.querySelectorAll('#section-list li').forEach((li, index) => {
                orders.push({ id: li.dataset.id, newOrder: index });
            });
            
            fetch('/admin/homepage/update-order', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ orders })
            });
        }
    });
</script>