<div class="admin-sidebar shadow" style="width: 200px; background-color: #23282d; min-height: 100vh; position: fixed; left: 0; top: 0; z-index: 1000;">
    <div class="sidebar-header p-3 border-bottom border-secondary" style="background-color: #1d2327;">
        <a href="/" class="text-white text-decoration-none fw-bold small">
            <i class="fas fa-globe me-2 text-secondary"></i>Xem Website
        </a>
    </div>

    <ul class="nav flex-column mt-2">
        <li class="nav-item">
            <a class="nav-link admin-nav-link <%= path === '/admin' ? 'active' : '' %>" href="/admin">
                <i class="fas fa-tachometer-alt me-2"></i>Bảng tin
            </a>
        </li>

        <li class="nav-item mt-2">
            <a class="nav-link admin-nav-link <%= path.includes('/admin/post') && !path.includes('category') ? 'active' : '' %>" href="/admin/posts">
                <i class="fas fa-thumbtack me-2"></i>Bài viết
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link admin-nav-link ps-4 small <%= path === '/admin/blog-categories' ? 'active' : '' %>" href="/admin/blog-categories" style="font-size: 0.85rem; opacity: 0.8;">
