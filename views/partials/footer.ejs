<footer class="pt-5 pb-3 mt-5" style="background-color: <%= theme.footerBgColor || '#1d2327' %>; color: <%= theme.footerTextColor || '#ffffff' %>;">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="footer-logo mb-3">
                    <% if (theme.logo) { %>
                        <img src="<%= theme.logo %>" alt="Footer Logo" style="max-height: 50px; width: auto;">
                    <% } else { %>
                        <h4 class="fw-bold text-uppercase">FASHION<span class="text-danger">.</span></h4>
                    <% } %>
                </div>
                <p class="opacity-75 small lh-lg">
                    <%= theme.footerAbout || 'Chúng tôi cung cấp những sản phẩm thời trang chất lượng cao, đón đầu xu hướng với mức giá hợp lý nhất.' %>
                </p>
                <div class="d-flex gap-3 mt-4">
                    <% if (theme.socialFacebook) { %>
                        <a href="<%= theme.socialFacebook %>" class="text-inherit fs-5"><i class="bi bi-facebook"></i></a>
                    <% } %>
                    <% if (theme.socialInstagram) { %>
                        <a href="<%= theme.socialInstagram %>" class="text-inherit fs-5"><i class="bi bi-instagram"></i></a>
                    <% } %>
                    <% if (theme.socialTiktok) { %>
                        <a href="<%= theme.socialTiktok %>" class="text-inherit fs-5"><i class="bi bi-tiktok"></i></a>
                    <% } %>
                    <% if (theme.socialYoutube) { %>
                        <a href="<%= theme.socialYoutube %>" class="text-inherit fs-5"><i class="bi bi-youtube"></i></a>
                    <% } %>
                </div>
            </div>

            <div class="col-lg-2 col-md-6">
                <h6 class="text-uppercase fw-bold mb-4">Mua sắm</h6>
                <ul class="list-unstyled footer-links small">
                    <li class="mb-2"><a href="/products" class="text-decoration-none text-inherit">Tất cả sản phẩm</a></li>
                    <li class="mb-2"><a href="#" class="text-decoration-none text-inherit">Sản phẩm mới</a></li>
                    <li class="mb-2"><a href="#" class="text-decoration-none text-inherit">Bộ sưu tập</a></li>
                    <li class="mb-2"><a href="#" class="text-decoration-none text-inherit">Giảm giá</a></li>
                </ul>
            </div>

            <div class="col-lg-2 col-md-6">
                <h6 class="text-uppercase fw-bold mb-4">Hỗ trợ</h6>
                <ul class="list-unstyled footer-links small">
                    <li class="mb-2"><a href="/p/huong-dan-mua-hang" class="text-decoration-none text-inherit">Hướng dẫn mua hàng</a></li>
                    <li class="mb-2"><a href="/p/chinh-sach-doi-tra" class="text-decoration-none text-inherit">Chính sách đổi trả</a></li>
                    <li class="mb-2"><a href="/p/chinh-sach-bao-mat" class="text-decoration-none text-inherit">Chính sách bảo mật</a></li>
                    <li class="mb-2"><a href="/p/lien-he" class="text-decoration-none text-inherit">Liên hệ</a></li>
                </ul>
            </div>

            <div class="col-lg-4 col-md-6">
                <h6 class="text-uppercase fw-bold mb-4">Thông tin liên hệ</h6>
                <ul class="list-unstyled small">
                    <li class="mb-3 d-flex align-items-start">
                        <i class="bi bi-geo-alt me-3 mt-1"></i>
                        <span><%= theme.address || 'Hà Nội, Việt Nam' %></span>
                    </li>
                    <li class="mb-3 d-flex align-items-center">
                        <i class="bi bi-telephone me-3"></i>
                        <span><%= theme.contactPhone || '1900 xxxx' %></span>
                    </li>
                    <li class="mb-3 d-flex align-items-center">
                        <i class="bi bi-envelope me-3"></i>
                        <span><%= theme.contactEmail || 'contact@fashionshop.com' %></span>
                    </li>
                </ul>
            </div>
        </div>

        <hr class="my-5 opacity-25" style="border-top: 1px solid currentColor;">

        <div class="row align-items-center pb-2">
            <div class="col-md-6 text-center text-md-start small">
                <p class="mb-0">
                    <%= theme.footerCopyright || `&copy; ${new Date().getFullYear()} Fashion Shop. All rights reserved.` %>
                </p>
            </div>
            <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                <img src="https://vinadesign.vn/uploads/images/2023/05/vnpay-logo-vinadesign-25-12-57-55.jpg" alt="Payment Methods" style="height: 30px; filter: grayscale(1) brightness(2);">
            </div>
        </div>
    </div>
</footer>

<style>
    /* CSS nội bộ cho Footer */
    .text-inherit {
        color: inherit !important;
        opacity: 0.8;
        transition: all 0.3s ease;
    }
    .text-inherit:hover {
        opacity: 1;
        padding-left: 5px;
    }
    footer .bi {
        color: inherit;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<% if (typeof globalScripts !== 'undefined' && globalScripts.footerScripts) { %>
    <%- globalScripts.footerScripts %>
<% } %>

</body>
</html>