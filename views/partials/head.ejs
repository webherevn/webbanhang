<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <% if (typeof settings !== 'undefined' && settings.enableIndexing) { %>
        <meta name="robots" content="index, follow">
        <meta name="googlebot" content="index, follow">
    <% } else { %>
        <meta name="robots" content="noindex, nofollow">
        <meta name="googlebot" content="noindex, nofollow">
    <% } %>
   
    <% 
        let currentItem = (typeof post !== 'undefined') ? post : ((typeof product !== 'undefined') ? product : ((typeof page !== 'undefined') ? page : null));
        let siteTheme = (typeof theme !== 'undefined' && theme) ? theme : {};
        let siteSettings = (typeof settings !== 'undefined') ? settings : {};

        let finalTitle = (currentItem && currentItem.seoTitle) ? currentItem.seoTitle : (typeof pageTitle !== 'undefined' ? pageTitle : (siteSettings.websiteName || "Fashion Store"));
        
        let rawDesc = (currentItem && currentItem.seoDescription) ? currentItem.seoDescription : 
                      ((currentItem && currentItem.summary) ? currentItem.summary : 
                      (siteSettings.websiteDescription || "ChuyÃªn cung cáº¥p sáº£n pháº©m thá»i trang cao cáº¥p."));
        
        let finalDesc = rawDesc.replace(/<[^>]*>?/gm, '').substring(0, 160);
        let finalImage = (currentItem && currentItem.thumbnail) ? currentItem.thumbnail : (siteTheme.logo || "/images/default-share.jpg");
        let domain = "https://webbanhang-es90.onrender.com"; 
    %>

    <title><%= finalTitle %></title>
    <meta name="description" content="<%= finalDesc %>">
    <link rel="canonical" href="<%= domain %><%= typeof path !== 'undefined' ? path : '' %>">

    <% if (siteTheme.favicon) { %>
        <link rel="icon" type="image/x-icon" href="<%= siteTheme.favicon %>">
    <% } else { %>
        <link rel="icon" type="image/png" href="/images/favicon.png">
    <% } %>

    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= domain %><%= typeof path !== 'undefined' ? path : '' %>">
    <meta property="og:title" content="<%= finalTitle %>">
    <meta property="og:description" content="<%= finalDesc %>">
    <meta property="og:image" content="<%= finalImage %>">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800;900&family=Playfair+Display:ital,wght@0,700;1,700&display=swap" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <style>
        :root {
            --primary-font: 'Montserrat', sans-serif;
            --accent-font: 'Playfair Display', serif;
            --sidebar-width: 260px;
            --admin-bg: #f0f2f5;
            --wp-blue: #2271b1;
            --sidebar-bg: #1e2327;
            --luxury-indigo: #6366f1;
        }

        body { 
            background-color: #fff;
            font-family: var(--primary-font);
            font-size: 14px;
            color: #1e293b;
            margin: 0; padding: 0;
            overflow-x: hidden;
        }

        /* ---------------------------------------------------------
           ðŸ’Ž LUXURY PRODUCT CARD SYSTEM (FIXED GRID)
        --------------------------------------------------------- */
        .product-card-pro { background: transparent; transition: all 0.4s ease; margin-bottom: 25px; }
        
        .pc-image-container {
            position: relative; overflow: hidden; background-color: #f1f5f9;
            aspect-ratio: 3/4; border-radius: 8px;
        }

        .pc-img { width: 100%; height: 100%; object-fit: cover; transition: all 0.7s cubic-bezier(0.4, 0, 0.2, 1); }
        .pc-img-secondary { position: absolute; top: 0; left: 0; opacity: 0; transform: scale(1.05); }

        .product-card-pro:hover .pc-img-primary { opacity: 0; }
        .product-card-pro:hover .pc-img-secondary { opacity: 1; transform: scale(1); }
        .product-card-pro:hover .pc-img-primary:not(:has(+ .pc-img-secondary)) { transform: scale(1.1); opacity: 1; }

        .pc-badges { position: absolute; top: 12px; left: 12px; z-index: 5; display: flex; flex-direction: column; gap: 5px; }
        .badge-custom { font-size: 10px; font-weight: 800; padding: 4px 10px; color: #fff; letter-spacing: 1px; }
        .badge-new { background: #000; }
        .badge-sale { background: #ef4444; }

        .pc-overlay-actions {
            position: absolute; bottom: -60px; left: 0; width: 100%;
            display: flex; justify-content: center; gap: 8px; padding: 20px;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275); z-index: 10;
        }
        .product-card-pro:hover .pc-overlay-actions { bottom: 0; }
        .pc-action-btn {
            background: #fff; border: none; width: 40px; height: 40px;
            border-radius: 50%; display: flex; align-items: center; justify-content: center;
            box-shadow: 0 10px 15px rgba(0,0,0,0.1); transition: 0.3s; color: #000;
        }
        .btn-add-cart { width: auto; padding: 0 20px; border-radius: 30px; font-size: 11px; font-weight: 800; }
        .pc-action-btn:hover { background: #000; color: #fff; }

        .pc-details { padding: 15px 0; text-align: left; }
        .pc-title { font-size: 15px; font-weight: 600; margin-bottom: 6px; }
        .pc-title a { color: #000; text-decoration: none; }
        .price-current { font-weight: 800; font-size: 16px; color: #000; }
        .price-old { text-decoration: line-through; color: #94a3b8; font-size: 13px; margin-left: 8px; }

        /* ---------------------------------------------------------
           ðŸ›  ADMIN & CORE UI
        --------------------------------------------------------- */
        .admin-sidebar-container {
            width: var(--sidebar-width); position: fixed; top: 0; left: 0; bottom: 0;
            background-color: var(--sidebar-bg); z-index: 1000; overflow-y: auto;
        }
        .admin-content { flex: 1; margin-left: var(--sidebar-width); padding: 30px; min-width: 0; }
        
        .letter-spacing-2 { letter-spacing: 2px; }

        /* Menu Äa Cáº¥p */
        @media (min-width: 992px) {
            .navbar-nav .nav-item:hover > .dropdown-menu { display: block !important; opacity: 1; visibility: visible; }
            .dropdown-submenu { position: absolute; left: 100%; top: 0; display: none; min-width: 220px; background: #fff; box-shadow: 0 5px 15px rgba(0,0,0,0.1); }
            .dropdown-item-has-child:hover > .dropdown-submenu { display: block; }
        }

        <% if (siteTheme.customCss) { %>
            <%- siteTheme.customCss %>
        <% } %>
    </style>
</head>