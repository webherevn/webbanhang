<%- include('../partials/head.ejs') %>

<style>
    /* 1. ĐỒNG BỘ BIẾN HỆ THỐNG */
    :root {
        --sidebar-width: 240px;
        --admin-bg: #f0f0f1;
        --sidebar-bg: #23282d;
        --wp-blue: #2271b1;
        --base-font: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen-Sans,Ubuntu,Cantarell,"Helvetica Neue",sans-serif;
    }

    body { 
        margin: 0; 
        background-color: var(--admin-bg); 
        font-family: var(--base-font);
        font-size: 14px;
        color: #3c434a;
    }

    /* 2. ĐỒNG BỘ LAYOUT */
    .admin-wrapper { display: flex; min-height: 100vh; }
    
    .admin-sidebar-container { 
        width: var(--sidebar-width); 
        position: fixed; 
        top: 0; left: 0; bottom: 0; 
        background-color: var(--sidebar-bg); 
        z-index: 1000; 
    }
    
    .admin-content { 
        flex: 1; 
        margin-left: var(--sidebar-width); 
        padding: 30px; 
        min-width: 0;
    }

    /* 3. WP STYLE TABLE & CARD */
    .wp-card { 
        background: #fff; 
        border: 1px solid #c3c4c7; 
        box-shadow: 0 1px 1px rgba(0,0,0,.04); 
    }
    
    .table-head-wp { 
        background-color: #fff; 
        border-bottom: 2px solid #dcdcde; 
        color: #1d2327; 
    }

    .table-head-wp th {
        font-weight: 600;
        padding: 12px 10px;
        font-size: 14px;
    }

    .post-title-link { 
        font-weight: 600; 
        color: var(--wp-blue); 
        text-decoration: none; 
        font-size: 14px; 
        display: block;
    }
    .post-title-link:hover { color: #135e96; }

    /* Row Actions - Chỉ hiện khi hover dòng */
    .row-actions { 
        visibility: hidden; 
        font-size: 13px; 
        margin-top: 5px; 
        color: #a7aaad;
    }
    tr:hover .row-actions { 
        visibility: visible !important; 
    }

    .row-actions a, .row-actions button {
        color: var(--wp-blue);
        text-decoration: none;
    }
    .row-actions a:hover, .row-actions button:hover {
        color: #135e96;
    }
    .row-actions .delete-action { color: #b32d2e !important; }

    /* Badge & Meta */
    .badge-category {
        background-color: #f6f7f7;
        color: #3c434a;
        border: 1px solid #c3c4c7;
        font-weight: normal;
        font-size: 12px;
    }

    @media (max-width: 992px) {
        .admin-sidebar-container { display: none; }
        .admin-content { margin-left: 0; padding: 15px; }
    }
</style>
</head>
<body>
    <div class="admin-wrapper">
        <div class="admin-sidebar-container">
            <%- include('./partials/sidebar.ejs') %>
        </div>

        <div class="admin-content">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="d-flex align-items-center gap-3">
                    <h2 class="fw-bold h4 m-0 text-dark">Bài viết</h2>
                    <a href="/admin/add-post" class="btn btn-outline-primary btn-sm fw-bold px-3">Viết bài mới</a>
                </div>
            </div>

            <div class="wp-card shadow-sm overflow-hidden">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-head-wp">
                        <tr>
                            <th class="ps-3" width="70">Ảnh</th>
                            <th>Tiêu đề</th>
                            <th width="150">Chuyên mục</th>
                            <th width="120">Ngày đăng</th>
                            <th class="text-center" width="100">Lượt xem</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (posts && posts.length > 0) { %>
                            <% posts.forEach(p => { %>
                                <tr>
                                    <td class="ps-3">
                                        <img src="<%= p.thumbnail || 'https://via.placeholder.com/50' %>" 
                                             alt="thumbnail"
                                             style="width: 50px; height: 50px; object-fit: cover; border: 1px solid #dcdcde; border-radius: 2px;">
                                    </td>

                                    <td>
                                        <a href="/admin/edit-post/<%= p._id %>" class="post-title-link">
                                            <%= p.title %>
                                        </a>
                                        
                                        <div class="row-actions">
                                            <a href="/admin/edit-post/<%= p._id %>">Sửa</a>
                                            <span class="mx-1">|</span>
                                            
                                            <form action="/admin/delete-post" method="POST" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa bài viết này?')">
                                                <input type="hidden" name="postId" value="<%= p._id %>">
                                                <button type="submit" class="btn btn-link p-0 delete-action border-0 bg-transparent" style="font-size: 13px;">Xóa</button>
                                            </form>
                                            
                                            <span class="mx-1">|</span>
                                            <a href="/blog/post/<%= p.slug %>" target="_blank" class="text-success fw-bold">Xem</a>
                                        </div>
                                    </td>

                                    <td>
                                        <span class="badge badge-category">
                                            <%= p.category ? p.category.name : 'Chưa phân loại' %>
                                        </span>
                                    </td>

                                    <td class="small text-muted">
                                        <%= p.createdAt.toLocaleDateString('vi-VN') %>
                                    </td>

                                    <td class="text-center small">
                                        <span class="text-muted"><i class="far fa-eye me-1"></i> <%= p.views || 0 %></span>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="fas fa-file-alt fa-3x mb-3 opacity-25"></i>
                                    <p>Chưa có bài viết nào. Hãy bắt đầu viết bài đầu tiên!</p>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <div class="mt-3 small text-muted">
                Tổng cộng: <strong><%= posts ? posts.length : 0 %></strong> bài viết
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>