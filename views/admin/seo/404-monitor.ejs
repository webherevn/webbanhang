<%- include('../../partials/head.ejs') %>

<style>
    body { background-color: #f0f0f1; }
    .admin-wrapper { display: flex; min-height: 100vh; }
    .admin-content { flex: 1; padding: 30px; margin-left: var(--sidebar-width); }
    .wp-card { background: #fff; padding: 20px; border: 1px solid #c3c4c7; }
</style>

<body>
    <div class="admin-wrapper">
        <div class="admin-sidebar-container"><%- include('../partials/sidebar.ejs') %></div>
        
        <div class="admin-content">
            <h2 class="fw-bold h4 mb-4">Theo dõi lỗi 404</h2>

            <div class="wp-card">
                <p class="text-muted small">Danh sách các đường dẫn khách hàng đã truy cập nhưng không tồn tại.</p>
                
                <table class="table table-hover align-middle small">
                    <thead class="table-light">
                        <tr>
                            <th>Đường dẫn lỗi (URL)</th>
                            <th class="text-center">Số lần gặp</th>
                            <th>Lần cuối</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (logs.length > 0) { %>
                            <% logs.forEach(log => { %>
                                <tr>
                                    <td class="fw-bold text-danger"><%= log.path %></td>
                                    <td class="text-center"><span class="badge bg-warning text-dark"><%= log.hits %></span></td>
                                    <td><%= log.lastAccessed.toLocaleString('vi-VN') %></td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-2">
                                            <a href="/admin/seo/redirects?from=<%= log.path %>" class="btn btn-sm btn-outline-primary" title="Tạo chuyển hướng 301">
                                                <i class="fas fa-random"></i>
                                            </a>
                                            <form action="/admin/seo/404-monitor/delete" method="POST" onsubmit="return confirm('Xóa log này?')">
                                                <input type="hidden" name="id" value="<%= log._id %>">
                                                <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash-alt"></i></button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="4" class="text-center py-4">Tuyệt vời! Hiện chưa ghi nhận lỗi 404 nào.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>